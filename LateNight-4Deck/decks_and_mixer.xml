<!DOCTYPE template>
<!--
  Description:
    Decks and mixer, like it says.
-->
<Template>
  <WidgetGroup>
    <ObjectName>DecksAndMixer</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me, min</SizePolicy>
    <!-- It would be nice if we could be totally dynamic, but having a set
    height for this row really helps. -->
    <MinimumSize>1024, 325</MinimumSize>
    <Children>
        <WidgetGroup>
            <ObjectName>DeckLeftMargin</ObjectName>
            <Layout>vertical</Layout>
            <SizePolicy>me,min</SizePolicy>
            <Children>
                <WidgetGroup>
                    <ObjectName>MicContainer</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>me,min</SizePolicy>
                    <Children>
                        <WidgetGroup>
                            <ObjectName>MicBorder</ObjectName>
                            <Layout>vertical</Layout>
                            <SizePolicy>min,min</SizePolicy>
                            <Children>
		                        <!-- To make each widget centered, we have to put them
		                        each in their own widgetgroup. -->
		                        <WidgetGroup>
		                            <Layout>horizontal</Layout>
		                            <SizePolicy>min,min</SizePolicy>
		                            <Children>
		                                <PushButton>
		                                    <TooltipId>microphone_talkover</TooltipId>
		                                    <NumberStates>2</NumberStates>
		                                    <State>
		                                        <Number>0</Number>
		                                        <Pressed>btn_microphone_talkover_down.png</Pressed>
		                                        <Unpressed>btn_microphone_talkover.png</Unpressed>
		                                    </State>
		                                    <State>
		                                        <Number>1</Number>
		                                        <Pressed>btn_microphone_talkover_overdown.png</Pressed>
		                                        <Unpressed>btn_microphone_talkover_over.png</Unpressed>
		                                    </State>
		                                    <Connection>
		                                        <ConfigKey>[Microphone],talkover</ConfigKey>
		                                        <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
		                                        <ButtonState>LeftButton</ButtonState>
		                                    </Connection>
		                                </PushButton>
		                            </Children>
		                        </WidgetGroup>
		                        <WidgetGroup>
		                            <Layout>vertical</Layout>
		                            <SizePolicy>min,min</SizePolicy>
		                            <Children>
		                                <Knob>
		                                    <TooltipId>microphone_volume</TooltipId>
		                                    <NumberStates>64</NumberStates>
		                                    <Path>knobs/knob_rotary_s%1.png</Path>
		                                    <Connection>
		                                        <ConfigKey>[Microphone],volume</ConfigKey>
		                                    </Connection>
		                                </Knob>
		                            </Children>
		                        </WidgetGroup>
		                        <WidgetGroup>
		                            <Layout>vertical</Layout>
		                            <SizePolicy>min,min</SizePolicy>
		                            <Children>
		                                <StatusLight>
		                                    <TooltipId>PeakIndicator</TooltipId>
		                                    <PathStatusLight>btn_clipping1_over.png</PathStatusLight>
		                                    <PathBack>btn_clipping1.png</PathBack>
		                                    <Horizontal>false</Horizontal>
		                                    <Connection>
		                                        <ConfigKey>[Microphone],PeakIndicator</ConfigKey>
		                                    </Connection>
		                                </StatusLight>
		                                <VuMeter>
		                                    <TooltipId>microphone_VuMeter</TooltipId>
		                                    <PathVu>btn_volume_display1_over.png</PathVu>
		                                    <PathBack>btn_volume_display1.png</PathBack>
		                                    <Horizontal>false</Horizontal>
		                                    <PeakHoldSize>5</PeakHoldSize>
		                                    <PeakHoldTime>500</PeakHoldTime>
		                                    <PeakFallTime>50</PeakFallTime>
		                                    <PeakFallStep>2</PeakFallStep>
		                                    <Connection>
		                                        <ConfigKey>[Microphone],VuMeter</ConfigKey>
		                                    </Connection>
		                                </VuMeter>
		                            </Children>
		                        </WidgetGroup>
		                        <WidgetGroup>
		                            <Layout>vertical</Layout>
		                            <SizePolicy>min,min</SizePolicy>
		                            <Children>
		                                <PushButton>
		                                    <TooltipId>orientation</TooltipId>
		                                    <Style></Style>
		                                    <NumberStates>3</NumberStates>
		                                    <State>
		                                        <Number>0</Number>
		                                        <Pressed>btn_orientation_microphone_left_over.png</Pressed>
		                                        <Unpressed>btn_orientation_microphone_left_over.png</Unpressed>
		                                    </State>
		                                    <State>
		                                        <Number>1</Number>
		                                        <Pressed>btn_orientation_microphone_master.png</Pressed>
		                                        <Unpressed>btn_orientation_microphone_master.png</Unpressed>
		                                    </State>
		                                    <State>
		                                        <Number>2</Number>
		                                        <Pressed>btn_orientation_microphone_right_over.png</Pressed>
		                                        <Unpressed>btn_orientation_microphone_right_over.png</Unpressed>
		                                    </State>
		                                    <Connection>
		                                        <ConfigKey>[Microphone],orientation</ConfigKey>
		                                        <EmitOnDownPress>true</EmitOnDownPress>
		                                        <ButtonState>LeftButton</ButtonState>
		                                    </Connection>
		                                </PushButton>
		                            </Children>
		                        </WidgetGroup>
	                        </Children>
                        </WidgetGroup>
                    </Children>
                </WidgetGroup>
                <WidgetGroup>
                    <ObjectName>FourDeckButton</ObjectName>
                    <Layout>vertical</Layout>
                    <SizePolicy>min,min</SizePolicy>
                    <!--  This size is the size of the whole widget minus the
                    size of the microphone box -->
                    <MinimumSize>-1, 140</MinimumSize>
                    <Children>
			            <PushButton>
			                <Size>40f,20f</Size>
			                <ObjectName>ToggleButton</ObjectName>
			                <NumberStates>2</NumberStates>
			                <State>
			                  <Number>0</Number>
			                  <Text>2DECK</Text>
			                </State>
			                <State>
			                  <Number>1</Number>
			                  <Text>4DECK</Text>
			                </State>
			                <Connection>
			                  <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
			                  <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
			                </Connection>
			            </PushButton>
				    </Children>
			    </WidgetGroup>
			    
            </Children>
        </WidgetGroup>
        
                            
        <WidgetGroup>
            <Layout>horizontal</Layout>
            <Children>
		        <Template src="skin:deck_container.xml">
		            <SetVariable name="channum">3</SetVariable>
		        </Template>
	        </Children>
	        <Connection>
	            <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
	            <BindProperty>visible</BindProperty>
	        </Connection>
        </WidgetGroup>
        <Template src="skin:deck_container.xml">
            <SetVariable name="channum">1</SetVariable>
        </Template>
        <Template src="skin:mixer.xml"/>
        <Template src="skin:deck_container.xml">
            <SetVariable name="channum">2</SetVariable>
        </Template>
        <WidgetGroup>
            <Layout>horizontal</Layout>
            <Children>
		        <Template src="skin:deck_container.xml">
		            <SetVariable name="channum">4</SetVariable>
		        </Template>
	        </Children>
	        <Connection>
                <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                <BindProperty>visible</BindProperty>
            </Connection>
        </WidgetGroup>
        <WidgetGroup>
            <ObjectName>DeckRightMargin</ObjectName>
            <Layout>horizontal</Layout>
            <SizePolicy>me,min</SizePolicy>
            <MinimumSize>1,325</MinimumSize>
            <Children>
                <Time>
                    <Style>QLabel { font: bold 16px/19px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
                                    background-color: transparent; color: #EECE33; }
                    </Style>
                    <ClockFormat>12</ClockFormat>
                </Time>
            </Children>
        </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
