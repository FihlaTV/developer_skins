<!DOCTYPE template>
<!--
  Description:
    Spinnys and Waveforms
-->
<Template>
  <WidgetGroup>
    <ObjectName>MainDeckContainer</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <MaximumSize>-1, 213</MaximumSize>
    <Children>
      <WidgetGroup>
          <Layout>horizontal</Layout>
          <Children>
	      <Template src="skin:spinny.xml">
	          <SetVariable name="channum">3</SetVariable>
	      </Template>
          </Children>
          <Connection>
              <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
              <BindProperty>visible</BindProperty>
          </Connection>
      </WidgetGroup>
      <Template src="skin:spinny.xml">
          <SetVariable name="channum">1</SetVariable>
      </Template>
      <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>
            <WidgetGroup>
            <Layout>horizontal</Layout>
            <Children>
	            <Template src="skin:waveform.xml">
	                <SetVariable name="channum">3</SetVariable>
	            </Template>
            </Children>
            <Connection>
                <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                <BindProperty>visible</BindProperty>
            </Connection>
        </WidgetGroup>
            <Template src="skin:waveform.xml">
                <SetVariable name="channum">1</SetVariable>
            </Template>
            <Template src="skin:waveform.xml">
                <SetVariable name="channum">2</SetVariable>
            </Template>
        <WidgetGroup>
            <Layout>horizontal</Layout>
            <Children>
	            <Template src="skin:waveform.xml">
	                <SetVariable name="channum">4</SetVariable>
	            </Template>
	        </Children>
            <Connection>
                <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                <BindProperty>visible</BindProperty>
            </Connection>
        </WidgetGroup>
        </Children>
      </WidgetGroup>
      <Template src="skin:spinny.xml">
          <SetVariable name="channum">2</SetVariable>
      </Template>
      <WidgetGroup>
            <Layout>horizontal</Layout>
            <Children>
		      <Template src="skin:spinny.xml">
		          <SetVariable name="channum">4</SetVariable>
		      </Template>
            </Children>
            <Connection>
                <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                <BindProperty>visible</BindProperty>
            </Connection>
        </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
