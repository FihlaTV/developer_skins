<Template>
	<WidgetGroup>
	    <ObjectName>Mixer</ObjectName>
		<SizePolicy>me,min</SizePolicy>
		<MinimumSize>360,-1</MinimumSize>
		<Layout>horizontal</Layout>
		<Children>
			<WidgetGroup>
			    <ObjectName>PrimaryMixer</ObjectName> 
				<Layout>vertical</Layout>
				<SizePolicy>min,min</SizePolicy>
				<Children>
					  <WidgetGroup>
					    <ObjectName>MasterSync</ObjectName>
					    <SizePolicy>min,min</SizePolicy>
						<Layout>horizontal</Layout>
						<Children>
							<PushButton>
								<TooltipId>sync_master</TooltipId>
								<Style></Style>
								<NumberStates>2</NumberStates>
								<State>
									<Number>0</Number>
									<Pressed>btn_mastersync_master_on.png</Pressed>
									<Unpressed>btn_mastersync_master_off.png</Unpressed>
								</State>
								<State>
									<Number>1</Number>
									<Pressed>btn_mastersync_master_on.png</Pressed>
									<Unpressed>btn_mastersync_master_on.png</Unpressed>
								</State>
								<Pos>4,4</Pos>
								<Connection>
									<ConfigKey>[InternalClock],sync_master</ConfigKey>
									<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
									<ButtonState>LeftButton</ButtonState>
								</Connection>
							</PushButton>
							<NumberBpm>
								<TooltipId>visual_bpm</TooltipId>
								<Style>QLabel { font: bold 18px/21px Lucida Grande, Lucida Sans
									Unicode, Arial, Verdana, sans-serif;
									background-color:
									transparent; color: #EECE33; text-align: left;padding-left:
									1px;
									}
								</Style>
								<Channel>1</Channel>
								<NumberOfDigits>1</NumberOfDigits>
								<Connection>
									<ConfigKey>[InternalClock],bpm</ConfigKey>
								</Connection>
							</NumberBpm>
						</Children>
					</WidgetGroup>
					<WidgetGroup>
						<ObjectName>MixerContainer</ObjectName>
						<Layout>vertical</Layout>
						<SizePolicy>min,min</SizePolicy>
						<Children>
							<WidgetGroup>
								<Layout>horizontal</Layout>
								<Children>
									<Template src="skin:mixer_channel.xml">
										<SetVariable name="channum">3</SetVariable>
									</Template>
									<Template src="skin:mixer_channel.xml">
										<SetVariable name="channum">1</SetVariable>
									</Template>
									<Template src="skin:mixer_channel.xml">
										<SetVariable name="channum">2</SetVariable>
									</Template>
									<Template src="skin:mixer_channel.xml">
										<SetVariable name="channum">4</SetVariable>
									</Template>
								</Children>
							</WidgetGroup>
							<WidgetGroup>
							    <ObjectName>CrossFadeContainer</ObjectName>
								<Layout>horizontal</Layout>
								<SizePolicy>me,min</SizePolicy>
								<Children>
								    <WidgetGroup>
								        <ObjectName>FourDeckButton</ObjectName>
				                        <Layout>horizontal</Layout>
				                        <Children>
				                            <PushButton>
				                                <Size>40f,20f</Size>
				                                <ObjectName>ToggleButton</ObjectName>
				                                <NumberStates>2</NumberStates>
				                                <State>
				                                  <Number>0</Number>
				                                  <Text>2DECK</Text>
				                                </State>
				                                <State>
				                                  <Number>1</Number>
				                                  <Text>4DECK</Text>
				                                </State>
				                                <Connection>
				                                  <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
				                                  <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
				                                </Connection>
				                            </PushButton>
				                        </Children>
				                    </WidgetGroup>
								    <WidgetGroup>
								        <ObjectName>Crossfader</ObjectName>
								        <Layout>horizontal</Layout>
								        <SizePolicy>me,min</SizePolicy>
								        <Children>
											<SliderComposed>
												<TooltipId>crossfader</TooltipId>
												<Handle>knob_crossfader.png</Handle>
												<Slider>slider_crossfader.png</Slider>
												<Horizontal>true</Horizontal>
												<Connection>
													<ConfigKey>[Master],crossfader</ConfigKey>
													<EmitOnDownPress>false</EmitOnDownPress>
												</Connection>
											</SliderComposed>
										</Children>
									</WidgetGroup>
								</Children>
							</WidgetGroup>
						</Children>
					</WidgetGroup>
				</Children>
			</WidgetGroup>
			<WidgetGroup>
			    <ObjectName>MasterFaders</ObjectName>
				<SizePolicy>min,min</SizePolicy>
				<Layout>vertical</Layout>
				<Children>
		            <WidgetGroup>
		                <ObjectName>KnobCentered</ObjectName>
		                <SizePolicy>min,min</SizePolicy>
		                <Layout>vertical</Layout>
		                <Children>
							<Knob>
								<TooltipId>master_volume</TooltipId>
								<NumberStates>64</NumberStates>
								<Path>knobs/knob_rotary_s%1.png</Path>
								<Connection>
									<ConfigKey>[Master],volume</ConfigKey>
								</Connection>
							</Knob>
		                    <Label>
		                        <ObjectName>KnobLabel</ObjectName>
		                        <Text>Master</Text>
		                    </Label>
						</Children>
					</WidgetGroup>
                    <WidgetGroup>
                        <ObjectName>KnobCentered</ObjectName>
                        <SizePolicy>min,min</SizePolicy>
                        <Layout>vertical</Layout>
                        <Children>
							 <Knob>
								<TooltipId>balance</TooltipId>
								<NumberStates>63</NumberStates>
								<Path>knobs/knob_rotary_s%1.png</Path>
								<Connection>
									<ConfigKey>[Master],balance</ConfigKey>
								</Connection>
							</Knob>
		                    <Label>
		                        <ObjectName>KnobLabel</ObjectName>
		                        <Text>Balance</Text>
		                    </Label>
                        </Children>
                    </WidgetGroup>
					<WidgetGroup> 
					    <ObjectName>MasterLevels</ObjectName>
						<Layout>horizontal</Layout>
						<SizePolicy>min,min</SizePolicy>
						<Children>
						    <WidgetGroup>
						        <SizePolicy>min,min</SizePolicy>
						        <Layout>vertical</Layout>
						        <Children>
									<StatusLight>
										<TooltipId>PeakIndicator</TooltipId>
										<PathStatusLight>btn_clipping1_over.png</PathStatusLight>
										<PathBack>btn_clipping1.png</PathBack>
										<Connection>
											<ConfigKey>[Master],PeakIndicator</ConfigKey>
										</Connection>
									</StatusLight>
									
									<VuMeter>
										<TooltipId>channel_VuMeter</TooltipId>
										<PathVu>btn_volume_display1_over.png</PathVu>
										<PathBack>btn_volume_display1.png</PathBack>
										<Horizontal>false</Horizontal>
										<PeakHoldSize>5</PeakHoldSize>
										<PeakHoldTime>500</PeakHoldTime>
										<PeakFallTime>50</PeakFallTime>
										<PeakFallStep>2</PeakFallStep>
										<Connection>
											<ConfigKey>[Master],VuMeterL</ConfigKey>
										</Connection>
									</VuMeter>
							     </Children>
							</WidgetGroup>
                            <WidgetGroup>
                                <SizePolicy>min,min</SizePolicy>
                                <Layout>vertical</Layout>
                                <Children>
									<StatusLight>
		                                <TooltipId>PeakIndicator</TooltipId>
		                                <PathStatusLight>btn_clipping1_over.png</PathStatusLight>
		                                <PathBack>btn_clipping1.png</PathBack>
		                                <Connection>
		                                    <ConfigKey>[Master],PeakIndicator</ConfigKey>
		                                </Connection>
		                            </StatusLight>
									<VuMeter>
										<TooltipId>channel_VuMeter</TooltipId>
										<PathVu>btn_volume_display1_over.png</PathVu>
										<PathBack>btn_volume_display1.png</PathBack>
										<Horizontal>false</Horizontal>
										<PeakHoldSize>5</PeakHoldSize>
										<PeakHoldTime>500</PeakHoldTime>
										<PeakFallTime>50</PeakFallTime>
										<PeakFallStep>2</PeakFallStep>
										<Connection>
											<ConfigKey>[Master],VuMeterR</ConfigKey>
										</Connection>
									</VuMeter>
								</Children>
							</WidgetGroup>
						</Children>
					</WidgetGroup>
                    <WidgetGroup>
                        <ObjectName>KnobCentered</ObjectName>
                        <SizePolicy>min,min</SizePolicy>
                        <Layout>vertical</Layout>
                        <Children>
							<Knob>
		                        <TooltipId>headphone_volume</TooltipId>
		                        <NumberStates>64</NumberStates>
		                        <Path>knobs/knob_rotary_s%1.png</Path>
		                        <Connection>
		                            <ConfigKey>[Master],headVolume</ConfigKey>
		                        </Connection>
		                    </Knob>
		                    <Label>
		                        <ObjectName>KnobLabel</ObjectName>
		                        <Text>Head Vol</Text>
		                    </Label>
                        </Children>
                    </WidgetGroup>
                    <WidgetGroup>
                        <ObjectName>KnobCentered</ObjectName>
                        <SizePolicy>min,min</SizePolicy>
                        <Layout>vertical</Layout>
                        <Children>
		                    <Knob>
		                        <TooltipId>headMix</TooltipId>
		                        <NumberStates>64</NumberStates>
		                        <Path>knobs/knob_rotary_s%1.png</Path>
		                        <Connection>
		                            <ConfigKey>[Master],headMix</ConfigKey>
		                        </Connection>
		                    </Knob>
		                    <Label>
		                        <ObjectName>KnobLabel</ObjectName>
		                        <Text>Pre/Main</Text>
		                    </Label>
                        </Children>
                    </WidgetGroup>
				</Children>
			</WidgetGroup>
		</Children>
	</WidgetGroup> 
</Template>
