<Template>
	<WidgetGroup>
	    <ObjectName>WaveformMixerContainer</ObjectName>
		<Layout>vertical</Layout>
		<SizePolicy>max,min</SizePolicy>
        <MinimumSize>200,-1</MinimumSize>
        <MaximumSize>200,-1</MaximumSize>
		<Children>
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<SizePolicy>me,min</SizePolicy>
				<Children>
					<Template src="skin:spinny.xml">
						<SetVariable name="channum">1</SetVariable>
					</Template>
					<Template src="skin:waveform.xml">
						<SetVariable name="channum">1</SetVariable>
					</Template>
				</Children>
				<Connection>
					<ConfigKey persist="true">[Master],show_4decks</ConfigKey>
					<BindProperty>visible</BindProperty>
				</Connection>
			</WidgetGroup>
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<Children>
					<Template src="skin:spinny.xml">
						<SetVariable name="channum">2</SetVariable>
					</Template>
					<Template src="skin:waveform.xml">
						<SetVariable name="channum">2</SetVariable>
					</Template>
				</Children>
			</WidgetGroup>
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<Children>
					<Template src="skin:spinny.xml">
						<SetVariable name="channum">3</SetVariable>
					</Template>
					<Template src="skin:waveform.xml">
						<SetVariable name="channum">3</SetVariable>
					</Template>
				</Children>
			</WidgetGroup>
			<WidgetGroup>
				<SizePolicy>me,min</SizePolicy>
				<Layout>horizontal</Layout>
				<Children>
					<Template src="skin:spinny.xml">
						<SetVariable name="channum">4</SetVariable>
					</Template>
					<Template src="skin:waveform.xml">
						<SetVariable name="channum">4</SetVariable>
					</Template>
				</Children>
				<Connection>
					<ConfigKey persist="true">[Master],show_4decks</ConfigKey>
					<BindProperty>visible</BindProperty>
				</Connection>
			</WidgetGroup>
			<Template src="skin:mixer.xml"/>
		</Children>
	</WidgetGroup>
</Template>