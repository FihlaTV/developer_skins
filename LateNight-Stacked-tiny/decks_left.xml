<Template>
    <WidgetGroup>
        <ObjectName>DecksLeftContainer</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
            <Template src="skin:deck_container.xml">
	            <SetVariable name="channum">1</SetVariable>
	        </Template>
            <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                    <Template src="skin:deck_container.xml">
                        <SetVariable name="channum">3</SetVariable>
                    </Template>
                </Children>
                <Connection>
                    <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
                    <BindProperty>visible</BindProperty>
                </Connection>
            </WidgetGroup>
        </Children>
    </WidgetGroup>
</Template>
