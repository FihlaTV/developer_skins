<!DOCTYPE template>
<!-- Description: Spinnys and Waveforms -->
<Template>
	<WidgetGroup>
		<ObjectName>VisualizationContainer</ObjectName>
		<Layout>horizontal</Layout>
		<SizePolicy>me,max</SizePolicy>
		<MaximumSize>-1,200</MaximumSize>
		<Children>
		    
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>me,min</SizePolicy>
				<Children>
					<WidgetGroup>
						<Layout>horizontal</Layout>
						<SizePolicy>me,min</SizePolicy>
						<Children>
							<Template src="skin:spinny.xml">
								<SetVariable name="channum">3</SetVariable>
							</Template>
							<Template src="skin:waveform.xml">
								<SetVariable name="channum">3</SetVariable>
							</Template>
						</Children>
						<Connection>
							<ConfigKey persist="true">[Master],show_4decks</ConfigKey>
							<BindProperty>visible</BindProperty>
						</Connection>
					</WidgetGroup>
					<WidgetGroup>
						<Layout>horizontal</Layout>
						<Children>
							<Template src="skin:spinny.xml">
								<SetVariable name="channum">1</SetVariable>
							</Template>
							<Template src="skin:waveform.xml">
								<SetVariable name="channum">1</SetVariable>
							</Template>
						</Children>
					</WidgetGroup>
					<WidgetGroup>
						<Layout>horizontal</Layout>
						<Children>
							<Template src="skin:spinny.xml">
								<SetVariable name="channum">2</SetVariable>
							</Template>
							<Template src="skin:waveform.xml">
								<SetVariable name="channum">2</SetVariable>
							</Template>
						</Children>
					</WidgetGroup>
					<WidgetGroup>
						<SizePolicy>me,min</SizePolicy>
						<Layout>horizontal</Layout>
						<Children>
						    <Template src="skin:spinny.xml">
                                <SetVariable name="channum">4</SetVariable>
                            </Template>
							<Template src="skin:waveform.xml">
								<SetVariable name="channum">4</SetVariable>
							</Template>
						</Children>
						<Connection>
							<ConfigKey persist="true">[Master],show_4decks</ConfigKey>
							<BindProperty>visible</BindProperty>
						</Connection>
					</WidgetGroup>
				</Children>
			</WidgetGroup>
			<WidgetGroup>
	            <Layout>horizontal</Layout>
	            <Children>
	                <Template src="skin:deck_container.xml">
	                    <SetVariable name="channum">4</SetVariable>
	                </Template>
	            </Children>
	            <Connection>
	                <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
	                <BindProperty>visible</BindProperty>
	            </Connection>
	        </WidgetGroup>
		</Children>
	</WidgetGroup>
</Template>
