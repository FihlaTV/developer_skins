<!DOCTYPE template>
<!--
Description:
Master controls : volume, balance, pregain + time.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
			
	<WidgetGroup>
		<ObjectName>Master and balance</ObjectName>
		<Layout>vertical</Layout>
		<!--Style>QGroupBox { border: 1px solid red; }</Style-->
		<SizePolicy>min,me</SizePolicy>
		<MinimumSize>40,-1</MinimumSize>
		<MaximumSize>60,-i</MaximumSize>
		<Children>
			
			<Time>
				<SizePolicy>me,f</SizePolicy>
				<MinimumSize>40,21</MinimumSize>
				<MaximumSize>60,21</MaximumSize>
				<TooltipId>time</TooltipId>
				<Style>
					QLabel {
						font				: bold 12px/14px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
						background-color	: transparent;
						color				: #ffffff;
					}
				</Style>
				<Alignment>center</Alignment>
				<ShowSeconds>false</ShowSeconds>
				<ClockFormat>24</ClockFormat>
			</Time>
			
			
			<WidgetGroup>
				<ObjectName>Master Volume and ...</ObjectName>
				<Layout>horizontal</Layout>
				<SizePolicy>me,min</SizePolicy>
				<MinimumSize>40,-1</MinimumSize>
				<MaximumSize>60,-1</MaximumSize>
				<Children>
					
					<WidgetGroup>
						<Layout>vertical</Layout>
						<SizePolicy>min,me</SizePolicy>
						<MinimumSize>40,125</MinimumSize>
						<MaximumSize>60,170</MaximumSize>
						<Children>
							
							<SliderComposed>
								<TooltipId>master_volume</TooltipId>
								<!--Slider>slider-vertical-30x125.svg</Slider-->
								<Slider>
									<svg width="30" height="125">
										<rect
											width	="30"
											height	="125"
											style	="fill:#ffffff;"/>
										<line x1="15" y1="0" x2="15" y2="125" stroke="#aaaaaa" stroke-width="1"/>
									</svg>
								</Slider>
								<Handle>handle-vertical-30x15-green.svg</Handle>
								<Horizontal>false</Horizontal>
								<Connection>
									<ConfigKey>[Master],volume</ConfigKey>
								</Connection>
							</SliderComposed>
							
						</Children>
					</WidgetGroup>
					
					<SliderComposed>
						<TooltipId>headVolume</TooltipId>
						<Slider>slider-vertical-30x125.svg</Slider>
						<Handle>handle-vertical-30x15-purple.svg</Handle>
						<Horizontal>false</Horizontal>
						<Connection>
							<ConfigKey>[Master],headVolume</ConfigKey>
						</Connection>
						<Connection>
							<ConfigKey>[Master],show_headphone_controls</ConfigKey>
							<BindProperty>visible</BindProperty>
						</Connection>
					</SliderComposed>
					
				</Children>
			</WidgetGroup>
			
			<SliderComposed>
				<TooltipId>headMix</TooltipId>
				<SizePolicy>me,min</SizePolicy>
				<Slider>slider-horizontal-60x30.svg</Slider>
				<Handle>handle-horizontal-10x30-purple.svg</Handle>
				<Horizontal>true</Horizontal>
				<Connection>
					<ConfigKey>[Master],headMix</ConfigKey>
				</Connection>
				<Connection>
					<ConfigKey>[Master],show_headphone_controls</ConfigKey>
					<BindProperty>visible</BindProperty>
				</Connection>
			</SliderComposed>
			
			<SliderComposed>
				<TooltipId>master_balance</TooltipId>
				<SizePolicy>f,me</SizePolicy>
				<Slider>slider-horizontal-60x30.svg</Slider>
				<Handle>handle-horizontal-10x30-green.svg</Handle>
				<Horizontal>true</Horizontal>
				<Connection>
					<ConfigKey>[Master],balance</ConfigKey>
				</Connection>
				<Connection>
					<ConfigKey>[Master],show_balance_controls</ConfigKey>
					<BindProperty>visible</BindProperty>
				</Connection>
			</SliderComposed>
			
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<SizePolicy>me,min</SizePolicy>
				<MinimumSize>40,27</MinimumSize>
				<MaximumSize>60,-1</MaximumSize>
				<Children>
					
					<!--PushButton>
						<Size>15f,20f</Size>
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Unpressed>btn_b_off.png</Unpressed>
							<Pressed>btn_b_off.png</Pressed>
						</State>
						<State>
							<Number>1</Number>
							<Unpressed>btn_b_on.png</Unpressed>
							<Pressed>btn_b_on.png</Pressed>
						</State>
						<Connection>
							<ConfigKey>[Master],show_balance_controls</ConfigKey>
						</Connection>
					</PushButton-->
					
					<SetVariable name="text">B</SetVariable>
					<PushButton>
						<ObjectName>BalanceToggle</ObjectName>
						<Size>20,22</Size>
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Unpressed>btn_text_1x1.svg</Unpressed>
							<Pressed>btn_text_1x1.svg</Pressed>
						</State>
						<State>
							<Number>1</Number>
							<SetVariable name="dark_color">#99ff99</SetVariable>
							<SetVariable name="light_color">#00ff00</SetVariable>
							<SetVariable name="text_color">#00ff00</SetVariable>
							<Unpressed>btn_text_1x1.svg</Unpressed>
							<Pressed>btn_text_1x1.svg</Pressed>
						</State>
						<Connection>
							<ConfigKey persist="true">[Master],show_balance_controls</ConfigKey>
						</Connection>
					</PushButton>
					
					<Template src="skin:skin_spacer_vx.xml">
						<SetVariable name="height">3</SetVariable>
					</Template>
					
					<SetVariable name="text">H</SetVariable>
					<PushButton>
						<TooltipId>pfl</TooltipId>
						<MinimumSize>30,20</MinimumSize>
						<MaximumSize>40,30</MaximumSize>
						<NumberStates>2</NumberStates>
						<RightClickIsPushButton>true</RightClickIsPushButton>
						<State>
							<Number>0</Number>
							<Unpressed>btn_text_1x1.svg</Unpressed>
							<Pressed>btn_text_1x1.svg</Pressed>
						</State>
						<State>
							<Number>1</Number>
							<!--SetVariable name="dark_color">#ed55ff</SetVariable-->
							<SetVariable name="dark_color">#fe99ff</SetVariable>
							<SetVariable name="light_color">#ba00ff</SetVariable>
							<SetVariable name="text_color">#ba00ff</SetVariable>
							<Unpressed>btn_text_1x1.svg</Unpressed>
							<Pressed>btn_text_1x1.svg</Pressed>
						</State>
						<Connection>
							<ConfigKey persist="true">[Master],show_headphone_controls</ConfigKey>
						</Connection>
					</PushButton>
					
					
				</Children>
			</WidgetGroup>
			
		</Children>
	</WidgetGroup>



</Template>




