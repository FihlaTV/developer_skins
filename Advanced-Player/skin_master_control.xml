<!DOCTYPE template>
<!--
Description:
Master controls : volume, balance, pregain + time.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
			
	<WidgetGroup>
		<ObjectName>Master and balance</ObjectName>
		<Layout>vertical</Layout>
		<Style>
			/** /
			QGroupBox { border: 1px solid red; }
			/**/
		</Style>
		<SizePolicy>min,min</SizePolicy>
		<MinimumSize>40,-1</MinimumSize>
		<MaximumSize>87,-i</MaximumSize>
		<Children>
			
			<Time>
				<SizePolicy>min,f</SizePolicy>
				<MinimumSize>40,27</MinimumSize>
				<MaximumSize>87,27</MaximumSize>
				<TooltipId>time</TooltipId>
				<Alignment>center</Alignment>
				<ShowSeconds>false</ShowSeconds>
				<ClockFormat>24</ClockFormat>
			</Time>
			
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">3</SetVariable>
			</Template>
			
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<SizePolicy>min,min</SizePolicy>
				<MinimumSize>33,21</MinimumSize>
				<Children>
					
					<SetVariable name="text">bal</SetVariable>
					<SetVariable name="text_x">13</SetVariable>
					<SetVariable name="text_y">21</SetVariable>
					
					<SetVariable name="width">50</SetVariable>
					<SetVariable name="height">21</SetVariable>
					<SetVariable name="offset">10.5</SetVariable>
					<SetVariable name="margin">5.5</SetVariable>
					
					
					<SetVariable name="color">#00ff00</SetVariable>
					
					<SetVariable name="handle_width">11</SetVariable>
					<SetVariable name="handle_height">21</SetVariable>
					
					<SliderComposed>
						<TooltipId>master_balance</TooltipId>
						<!--SizePolicy>f,me</SizePolicy-->
						<Slider>slider-horizontal.svg</Slider>
						<Handle>handle-horizontal.svg</Handle>
						<Horizontal>true</Horizontal>
						<Connection>
							<ConfigKey>[Master],balance</ConfigKey>
						</Connection>
						<Connection>
							<ConfigKey persist="true">[Master],show_balance_controls</ConfigKey>
							<BindProperty>visible</BindProperty>
						</Connection>
					</SliderComposed>
					
				</Children>
			</WidgetGroup>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">3</SetVariable>
			</Template>
			
			<WidgetGroup>
				<ObjectName>Master Volume and Headphone Volume</ObjectName>
				<Layout>horizontal</Layout>
				<SizePolicy>min,min</SizePolicy>
				<MinimumSize>40,120</MinimumSize>
				<MaximumSize>87,</MaximumSize>
				<Children>
					
					<!-- volume -->
					<SetVariable name="width">33</SetVariable>
					<SetVariable name="height">119</SetVariable>
					<SetVariable name="offset">16</SetVariable>
					<SetVariable name="margin">7.5</SetVariable>
					
					<SetVariable name="handle_width">33</SetVariable>
					<SetVariable name="handle_height">15</SetVariable>
					
					<SetVariable name="color">#00ff00</SetVariable>
					
					<SetVariable name="text">master</SetVariable>
					<SetVariable name="text_x">16</SetVariable>
					<SetVariable name="text_y">90</SetVariable>
					
					<SliderComposed>
						<TooltipId>master_volume</TooltipId>
						<Slider>slider-vertical.svg</Slider>
						<Handle>handle-vertical.svg</Handle>
						<Horizontal>false</Horizontal>
						<Connection>
							<ConfigKey>[Master],volume</ConfigKey>
						</Connection>
					</SliderComposed>
					
					<Template src="skin:skin_spacer_vx.xml">
						<SetVariable name="height">3</SetVariable>
					</Template>
					
					<!-- headphone volume -->
					<SetVariable name="width">33</SetVariable>
					<SetVariable name="height">119</SetVariable>
					<SetVariable name="offset">16</SetVariable>
					
					<SetVariable name="handle_width">29</SetVariable>
					<SetVariable name="handle_height">15</SetVariable>
					
					<SetVariable name="color">#ba00ff</SetVariable>
					
					<SetVariable name="text">head</SetVariable>
					<SetVariable name="text_x">16</SetVariable>
					<SetVariable name="text_y">90</SetVariable>
					
					<SliderComposed>
						<TooltipId>headVolume</TooltipId>
						<Slider>slider-vertical.svg</Slider>
						<Handle>handle-vertical.svg</Handle>
						<Horizontal>false</Horizontal>
						<Connection>
							<ConfigKey>[Master],headVolume</ConfigKey>
						</Connection>
						<Connection>
							<ConfigKey persist="true">[Master],show_headphone_controls</ConfigKey>
							<BindProperty>visible</BindProperty>
						</Connection>
					</SliderComposed>
					
				</Children>
			</WidgetGroup>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">3</SetVariable>
			</Template>
			
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<SizePolicy>min,min</SizePolicy>
				<MinimumSize>33,21</MinimumSize>
				<Children>
					<!-- head mix -->
					<SetVariable name="width">50</SetVariable>
					<SetVariable name="height">21</SetVariable>
					<SetVariable name="offset">6</SetVariable>
					<SetVariable name="text_x">34.5</SetVariable>
					<SetVariable name="text_y">30</SetVariable>
					
					<SetVariable name="text">head. mix</SetVariable>
					<SetVariable name="color">#ba00ff</SetVariable>
					
					<SetVariable name="handle_width">11</SetVariable>
					<SetVariable name="handle_height">21</SetVariable>
					
					<SliderComposed>
						<TooltipId>headMix</TooltipId>
						<SizePolicy>me,min</SizePolicy>
						<Slider>slider-horizontal.svg</Slider>
						<Handle>handle-horizontal.svg</Handle>
						<Horizontal>true</Horizontal>
						<Connection>
							<ConfigKey>[Master],headMix</ConfigKey>
						</Connection>
						<Connection>
							<ConfigKey persist="true">[Master],show_headphone_controls</ConfigKey>
							<BindProperty>visible</BindProperty>
						</Connection>
					</SliderComposed>
					
				</Children>
			</WidgetGroup>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">3</SetVariable>
			</Template>
			
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<SizePolicy>min,min</SizePolicy>
				<MinimumSize>40,27</MinimumSize>
				<MaximumSize>87,-1</MaximumSize>
				<Children>
					
					<SetVariable name="text">B</SetVariable>
					<PushButton>
						<ObjectName>BalanceToggle</ObjectName>
						<Size>20,22</Size>
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Unpressed>btn_text_little_1x1.svg</Unpressed>
							<Pressed>btn_text_little_1x1.svg</Pressed>
						</State>
						<State>
							<Number>1</Number>
							<SetVariable name="dark_color">#99ff99</SetVariable>
							<SetVariable name="light_color">#00ff00</SetVariable>
							<SetVariable name="text_color">#00ff00</SetVariable>
							<Unpressed>btn_text_little_1x1.svg</Unpressed>
							<Pressed>btn_text_little_1x1.svg</Pressed>
						</State>
						<Connection>
							<ConfigKey persist="true">[Master],show_balance_controls</ConfigKey>
						</Connection>
					</PushButton>
					
					<Template src="skin:skin_spacer_vx.xml">
						<SetVariable name="height">3</SetVariable>
					</Template>
					
					<SetVariable name="text">H</SetVariable>
					<PushButton>
						<TooltipId>pfl</TooltipId>
						<MinimumSize>30,20</MinimumSize>
						<MaximumSize>40,30</MaximumSize>
						<NumberStates>2</NumberStates>
						<RightClickIsPushButton>true</RightClickIsPushButton>
						<State>
							<Number>0</Number>
							<Unpressed>btn_text_little_1x1.svg</Unpressed>
							<Pressed>btn_text_little_1x1.svg</Pressed>
						</State>
						<State>
							<Number>1</Number>
							<SetVariable name="dark_color">#fe99ff</SetVariable>
							<SetVariable name="light_color">#ba00ff</SetVariable>
							<SetVariable name="text_color">#ba00ff</SetVariable>
							<Unpressed>btn_text_little_1x1.svg</Unpressed>
							<Pressed>btn_text_little_1x1.svg</Pressed>
						</State>
						<Connection>
							<ConfigKey persist="true">[Master],show_headphone_controls</ConfigKey>
						</Connection>
					</PushButton>
					
					
				</Children>
			</WidgetGroup>
			
		</Children>
	</WidgetGroup>
	
</Template>




