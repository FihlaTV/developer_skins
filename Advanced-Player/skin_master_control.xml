<!DOCTYPE template>
<!--
Description:
Master controls : volume, balance, pregain + time.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
			
	<WidgetGroup>
		<ObjectName>Master and balance</ObjectName>
		<Layout>vertical</Layout>
		<!--Style>QGroupBox { border: 1px solid red; }</Style-->
		<SizePolicy>min,me</SizePolicy>
		<MaximumSize>60,-i</MaximumSize>
		<Children>
			
			<WidgetGroup>
				<ObjectName>Master Volume and ...</ObjectName>
				<Layout>horizontal</Layout>
				<SizePolicy>f,min</SizePolicy>
				<MinimumSize>60,-1</MinimumSize>
				<MaximumSize>60,-1</MaximumSize>
				<Children>
					
					
					<SliderComposed>
						<TooltipId>headVolume</TooltipId>
						<Slider>slider-vertical-30x125.svg</Slider>
						<Handle>handle-vertical-30x15.svg</Handle>
						<Horizontal>false</Horizontal>
						<Connection>
							<ConfigKey>[Master],headVolume</ConfigKey>
						</Connection>
						<Connection>
							<ConfigKey>[Master],show_headphone_controls</ConfigKey>
							<BindProperty>visible</BindProperty>
						</Connection>
					</SliderComposed>
					
					<WidgetGroup>
						<Layout>vertical</Layout>
						<SizePolicy>min,me</SizePolicy>
						<Children>
							
							<SliderComposed>
								<TooltipId>master_volume</TooltipId>
								<Slider>slider-vertical-30x125.svg</Slider>
								<Handle>handle-vertical-30x15.svg</Handle>
								<Horizontal>false</Horizontal>
								<Connection>
									<ConfigKey>[Master],volume</ConfigKey>
								</Connection>
							</SliderComposed>
							
						</Children>
					</WidgetGroup>
					
				</Children>
			</WidgetGroup>
			
			<SliderComposed>
				<TooltipId>headMix</TooltipId>
				<SizePolicy>me,min</SizePolicy>
				<Slider>slider-horizontal-60x30.svg</Slider>
				<Handle>handle-horizontal-10x30.svg</Handle>
				<Horizontal>true</Horizontal>
				<Connection>
					<ConfigKey>[Master],headMix</ConfigKey>
				</Connection>
				<Connection>
					<ConfigKey>[Master],show_headphone_controls</ConfigKey>
					<BindProperty>visible</BindProperty>
				</Connection>
			</SliderComposed>
			
			<WidgetGroup>
				<Layout>horizontal</Layout>
				<SizePolicy>me,min</SizePolicy>
				<Children>
					
					<Time>
						<TooltipId>time</TooltipId>
						<Style>
							QLabel {
								font				: bold 12px/14px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
								background-color	: transparent;
								color				: #ffffff;
							}
						</Style>
						<Alignment>center</Alignment>
						<ShowSeconds>false</ShowSeconds>
						<ClockFormat>24</ClockFormat>
					</Time>
					
					<PushButton>
						<Size>15f,20f</Size>
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Pressed>btn_pfl_sampler.png</Pressed>
							<Unpressed>btn_pfl_sampler.png</Unpressed>
						</State>
						<State>
							<Number>1</Number>
							<Pressed>btn_pfl_sampler_over.png</Pressed>
							<Unpressed>btn_pfl_sampler_over.png</Unpressed>
						</State>
						<Connection>
							<ConfigKey>[Master],show_headphone_controls</ConfigKey>
						</Connection>
					</PushButton>
					
				</Children>
			</WidgetGroup>
			
			<SliderComposed>
				<TooltipId>master_balance</TooltipId>
				<SizePolicy>f,me</SizePolicy>
				<Slider>slider-horizontal-60x30.svg</Slider>
				<Handle>handle-horizontal-10x30.svg</Handle>
				<Horizontal>true</Horizontal>
				<Connection>
					<ConfigKey>[Master],balance</ConfigKey>
				</Connection>
			</SliderComposed>
			
		</Children>
	</WidgetGroup>



</Template>




