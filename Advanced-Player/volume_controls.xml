<!DOCTYPE template>
<!--
Description:
Track control panel.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
	
	
	<WidgetGroup>
	<ObjectName>Deck</ObjectName>
	<Layout>horizontal</Layout>
	<SizePolicy>min,me</SizePolicy>
	<Style>
		/** /
		QGroupBox { border: 1px solid red; }
		/**/
	</Style>
	<Children>

	<SetVariable name="margin_up">0</SetVariable>

	<!--
	**********************************************
	Column 1
	**********************************************
	-->
	<WidgetGroup>
		<ObjectName>VolumeColumn</ObjectName>
		<Layout>vertical</Layout>
		<SizePolicy>min,min</SizePolicy>
		<MinimumSize>25,-1</MinimumSize>
		<MaximumSize>33,-1</MaximumSize>
		<Children>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height"><Variable name="margin_up"/></SetVariable>
			</Template>
			
			<!--
			**********************************************
			Visual- Volume peak indicator
			**********************************************
			-->
			<SetVariable name="peak_width">15</SetVariable>
			<SetVariable name="peak_height">13</SetVariable>
			<SetVariable name="margin">2</SetVariable>
			<StatusLight>
				<TooltipId>PeakIndicator</TooltipId>
				<SizePolicy>min,min</SizePolicy>
				<PathStatusLight>peak_on.svg</PathStatusLight>
				<PathBack>peak_off.svg</PathBack>
				<Connection>
					<ConfigKey><Variable name="channel"/>,PeakIndicator</ConfigKey>
				</Connection>
			</StatusLight>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">0</SetVariable>
			</Template>
			
			<!--
			**********************************************
			Visual - Volume level display
			TODO : sizes?
			**********************************************
			-->
			<SetVariable name="vumeter_width">15</SetVariable>
			<SetVariable name="vumeter_height">53</SetVariable>
			<SetVariable name="margin">2</SetVariable>
			
			<VuMeter>
				<TooltipId>channel_VuMeter</TooltipId>
				<PathVu>vumeter_on.svg</PathVu>
				<PathBack>vumeter_off.svg</PathBack>
				
				<Horizontal>false</Horizontal>
				
				<PeakHoldSize><Variable name="vumeter_height"/></PeakHoldSize>
				<PeakHoldTime>500</PeakHoldTime>
				<PeakFallTime>50</PeakFallTime>
				<PeakFallStep>1</PeakFallStep>
				
				<Connection>
					<ConfigKey><Variable name="channel"/>,VuMeter</ConfigKey>
				</Connection>
			</VuMeter>
			
		</Children>
	</WidgetGroup>

	<Template src="skin:skin_spacer_vx.xml">
		<SetVariable name="height">0</SetVariable>
	</Template>

	</Children>
	</WidgetGroup>
</Template>
