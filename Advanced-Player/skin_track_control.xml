<!DOCTYPE template>
<!--
Description:
Track control panel.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
	
	
	<WidgetGroup>
	<ObjectName>Deck</ObjectName>
	<Layout>horizontal</Layout>
	<SizePolicy>min,me</SizePolicy>
	<!--Style>QGroupBox { border: 1px solid red; }</Style-->
	<Children>



	<!--
	**********************************************
	Column 1
	**********************************************
	-->
	<!--
	**********************************************
	Column 2
	**********************************************
	-->
	
	
	<WidgetGroup>
		<Layout>vertical</Layout>
		<MinimumSize>35,-1</MinimumSize>
		<MaximumSize>35,-1</MaximumSize>
		<Children>
			
			<!--
			****************************************
			 Button- Play
			****************************************
			-->
			<PushButton>
				<TooltipId>play_cue_set</TooltipId>
				<MinimumSize>20,20</MinimumSize>
				<MaximumSize>40,30</MaximumSize>
				<NumberStates>2</NumberStates>
				<RightClickIsPushButton>true</RightClickIsPushButton>
				<State>
					<Number>0</Number>
					<!--Pressed>btn_play_off.svg</Pressed-->
					<Unpressed>btn_play.png</Unpressed>
					<Pressed>btn_play.png</Pressed>
				</State>
				<State>
					<Number>1</Number>
					<Unpressed>btn_pause_<Variable name="i"/>.png</Unpressed>
					<Pressed>btn_pause_<Variable name="i"/>.png</Pressed>
				</State>
				<Connection>
					<ConfigKey><Variable name="channel"/>,play</ConfigKey>
					<EmitOnDownPress>true</EmitOnDownPress>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
				<Connection>
					<ConfigKey><Variable name="channel"/>,cue_set</ConfigKey>
					<EmitOnDownPress>true</EmitOnDownPress>
					<ButtonState>RightButton</ButtonState>
					<ConnectValueToWidget>false</ConnectValueToWidget>
				</Connection>
			</PushButton>
			
			
			<!--
			**********************************************
			Button- Prelisten / Monitoring
			**********************************************
			-->
			<PushButton>
				<TooltipId>pfl</TooltipId>
				<MinimumSize>30,20</MinimumSize>
				<MaximumSize>40,30</MaximumSize>
				<Style></Style>
				<NumberStates>2</NumberStates>
				<State>
					<Number>0</Number>
					<Pressed>btn_headphone_off.png</Pressed>
					<Unpressed>btn_headphone_off.png</Unpressed>
				</State>
				<State>
					<Number>1</Number>
					<Pressed>btn_headphone_<Variable name="i"/>.png</Pressed>
					<Unpressed>btn_headphone_<Variable name="i"/>.png</Unpressed>
				</State>
				<Connection>
					<ConfigKey><Variable name="channel"/>,pfl</ConfigKey>
				</Connection>
			</PushButton>
			
			
			<!--
			**********************************************
			Button- Beat sync
			**********************************************
			-->
			<PushButton>
				<TooltipId>beatsync_beatsync_tempo</TooltipId>
				<NumberStates>2</NumberStates>
				<State>
					<Number>0</Number>
					<Unpressed>btn_s_off.png</Unpressed>
					<Pressed>btn_s_off.png</Pressed>
				</State>
				<State>
					<Number>1</Number>
					<Unpressed>btn_s_<Variable name="i"/>.png</Unpressed>
					<Pressed>btn_s_<Variable name="i"/>.png</Pressed>
				</State>
				<Connection>
					<!--ConfigKey><Variable name="channel"/>,beatsync</ConfigKey-->
					<ConfigKey><Variable name="channel"/>,sync_enabled</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
				<!--Connection>
					<ConfigKey><Variable name="channel"/>,beatsync_tempo</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
					<ButtonState>RightButton</ButtonState>
				</Connection-->
			</PushButton>
			
			<!--
			**********************************************
			Button- Sync Master
			**********************************************
			-->
			<PushButton>
				<ObjectName>DeckSyncMaster</ObjectName>
				<Size>40f,20f</Size>
				<NumberStates>2</NumberStates>
				<State>
					<Number>0</Number>
					<Unpressed>btn_m_off.png</Unpressed>
					<Pressed>btn_m_off.png</Pressed>
				</State>
				<State>
					<Number>1</Number>
					<Unpressed>btn_m_<Variable name="i"/>.png</Unpressed>
					<Pressed>btn_m_<Variable name="i"/>.png</Pressed>
				</State>
				<Connection>
					<ConfigKey><Variable name="channel"/>,sync_master</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
			</PushButton>

			<!--
			**********************************************
			Button- BPM Tap
			**********************************************
			Little trickery here:
			BPM tap is transparent png directly over BPM display, so it became BPM and TAP at once,
			changed tooltip accordingly
			-->
			<!--PushButton>
				<TooltipId>bpm_tap_visual_bpm</TooltipId>
				<Style></Style>
				<NumberStates>1</NumberStates>
				<State>
					<Number>0</Number>
					<Pressed>btn_tap1_over.png</Pressed>
					<Unpressed>btn_tap1.png</Unpressed>
				</State>
				<Pos>307,80</Pos>
				<Connection>
					<ConfigKey><Variable name="channel"/>,bpm_tap</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
				</Connection>
			</PushButton-->
			
			
			
			<Template src="skin:skin_opener.xml">
				<SetVariable name="action">show_cues</SetVariable>
			</Template>
			
			
			
			
        </Children>
      </WidgetGroup>






	<!--
	**********************************************
	Column 3 
	**********************************************
	-->

	<!--
	**********************************************
	Column 4
	**********************************************
	-->
	<WidgetGroup>
		<ObjectName>PositionningColumn</ObjectName>
		<Layout>horizontal</Layout>
		<SizePolicy>min,me</SizePolicy>
		<Children>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<MinimumSize>20,-1</MinimumSize>
				<Children>
					
					<SliderComposed>
						<TooltipId>pitch_rate</TooltipId>
						<!--Size>25,90</Size-->
						<Slider>slider-vertical-15x79.svg</Slider>
						<Handle>handle-vertical-15x12-<Variable name="i"/>.svg</Handle>
						<Horizontal>false</Horizontal>
						<Alignment>center</Alignment>
						<Connection>
							<ConfigKey><Variable name="channel"/>,rate</ConfigKey>
							<EmitOnDownPress>false</EmitOnDownPress>
						</Connection>
					</SliderComposed>
				
					<WidgetGroup>
						<Layout>vertical</Layout>
						<SizePolicy>min,me</SizePolicy>
						<Children>
							
							<!--
							**********************************************
							Button- Key lock
							**********************************************
							-->
							
							<PushButton>
								<TooltipId>keylock</TooltipId>
								<MinimumSize>15,21</MinimumSize>
								<MaximumSize>15,21</MaximumSize>
								<NumberStates>2</NumberStates>
								<State>
									<Number>0</Number>
									<Pressed>btn_keylock_sampler.png</Pressed>
									<Unpressed>btn_keylock_sampler.png</Unpressed>
								</State>
								<State>
									<Number>1</Number>
									<Pressed>btn_keylock_sampler_<Variable name="i"/>.png</Pressed>
									<Unpressed>btn_keylock_sampler_<Variable name="i"/>.png</Unpressed>
								</State>
								<Pos>3,265</Pos>
								<Connection>
									<ConfigKey><Variable name="channel"/>,keylock</ConfigKey>
								</Connection>
							</PushButton>
							
							
						</Children>
					</WidgetGroup>
					
				</Children>
			</WidgetGroup>
			
			<!--
			**********************************************
			Button- Hotcue
			**********************************************
			-->
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<MinimumSize>24,-1</MinimumSize>
				<Children>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">hotcue</SetVariable>
						<SetVariable name="number">1</SetVariable>
						<SetVariable name="left_control">hotcue_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="right_control">hotcue_<Variable name="number"/>_clear</SetVariable>
						<SetVariable name="display_control">hotcue_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">hotcue</SetVariable>
						<SetVariable name="number">2</SetVariable>
						<SetVariable name="left_control">hotcue_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="right_control">hotcue_<Variable name="number"/>_clear</SetVariable>
						<SetVariable name="display_control">hotcue_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">hotcue</SetVariable>
						<SetVariable name="number">3</SetVariable>
						<SetVariable name="left_control">hotcue_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="right_control">hotcue_<Variable name="number"/>_clear</SetVariable>
						<SetVariable name="display_control">hotcue_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">hotcue</SetVariable>
						<SetVariable name="number">4</SetVariable>
						<SetVariable name="left_control">hotcue_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="right_control">hotcue_<Variable name="number"/>_clear</SetVariable>
						<SetVariable name="display_control">hotcue_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
					<!--
					**********************************************
					Button - Quantize
					**********************************************
					-->
					<PushButton>
						<TooltipId>quantize</TooltipId>
						<MinimumSize>40,20</MinimumSize>
						<MaximumSize>60,40</MaximumSize>
						<Style></Style>
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Pressed>btn_magnet_off.png</Pressed>
							<Unpressed>btn_magnet_off.png</Unpressed>
						</State>
						<State>
							<Number>1</Number>
							<!--Pressed>btn_quantize<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_quantize<Variable name="i"/>_over.png</Unpressed -->
							<Pressed>btn_magnet_<Variable name="i"/>.png</Pressed>
							<Unpressed>btn_magnet_<Variable name="i"/>.png</Unpressed>
						</State>
						<Connection>
							<ConfigKey><Variable name="channel"/>,quantize</ConfigKey>
							<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
							<ButtonState>LeftButton</ButtonState>
						</Connection>
					</PushButton>
					
				</Children>
			</WidgetGroup>
			
			
			<!--
			**********************************************
			Beatloop
			**********************************************
			-->
			<WidgetGroup>
				<ObjectName>BeatLoopLowerRow</ObjectName>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<MinimumSize>24,-1</MinimumSize>
				<Children>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">beatloop</SetVariable>
						<SetVariable name="number">4</SetVariable>
						<SetVariable name="left_control">beatloop_<Variable name="number"/>_toggle</SetVariable>
						<SetVariable name="right_control">beatlooproll_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="display_control">beatloop_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">beatloop</SetVariable>
						<SetVariable name="number">8</SetVariable>
						<SetVariable name="left_control">beatloop_<Variable name="number"/>_toggle</SetVariable>
						<SetVariable name="right_control">beatlooproll_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="display_control">beatloop_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">beatloop</SetVariable>
						<SetVariable name="number">16</SetVariable>
						<SetVariable name="left_control">beatloop_<Variable name="number"/>_toggle</SetVariable>
						<SetVariable name="right_control">beatlooproll_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="display_control">beatloop_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="tooltip_id">beatloop</SetVariable>
						<SetVariable name="number">32</SetVariable>
						<SetVariable name="left_control">beatloop_<Variable name="number"/>_toggle</SetVariable>
						<SetVariable name="right_control">beatlooproll_<Variable name="number"/>_activate</SetVariable>
						<SetVariable name="display_control">beatloop_<Variable name="number"/>_enabled</SetVariable>
					</Template>
					
				</Children>
			</WidgetGroup>
			
		</Children>
		<Connection>
			<ConfigKey><Variable name="channel"/>,show_cues</ConfigKey>
			<BindProperty>visible</BindProperty>
		</Connection>
	</WidgetGroup>


	<!--
	**********************************************
	Column 5 : Channel Volume
	**********************************************
	-->
	<WidgetGroup>
		<ObjectName>VolumeColumn</ObjectName>
		<Layout>vertical</Layout>
		<MinimumSize>30,-1</MinimumSize>
		<Children>
			
			<SliderComposed>
				<TooltipId>channel_volume</TooltipId>
				<!--Size>25,100</Size-->
				<Style>QGroupBox { border: 1px solid red; }</Style>
				<SizePoicy>min,min</SizePoicy>
				<Slider>slider-vertical-25x75.svg</Slider>
				<Handle>handle-vertical-25x12-<Variable name="i"/>.svg</Handle>
				<Horizontal>false</Horizontal>
				<Connection>
					<ConfigKey><Variable name="channel"/>,volume</ConfigKey>
					<EmitOnDownPress>false</EmitOnDownPress>
				</Connection>
			</SliderComposed>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">8</SetVariable>
			</Template>
			
			<Template src="skin:skin_opener.xml">
				<SetVariable name="action">show_pregain</SetVariable>
			</Template>
			
		</Children>
	</WidgetGroup>



	<!--
	**********************************************
	Column 6 : Gain
	**********************************************
	-->

	<WidgetGroup>
		<Layout>vertical</Layout>
			<Size>25,90</Size>
			<SizePolicy>f,me</SizePolicy>
			<Children>
			
			<SliderComposed>
				<TooltipId>pregain</TooltipId>
				<Size>25,90</Size>
				<Slider>slider-vertical-25x90.svg</Slider>
				<Handle>handle-vertical-25x12-<Variable name="i"/>.svg</Handle>
				<Horizontal>false</Horizontal>
				<Connection>
					<ConfigKey><Variable name="channel"/>,pregain</ConfigKey>
				</Connection>
			</SliderComposed>
			
			<Template src="skin:skin_spacer.xml"/>
			
		</Children>
		<Connection>
			<ConfigKey><Variable name="channel"/>,show_pregain</ConfigKey>
			<BindProperty>visible</BindProperty>
		</Connection>
	</WidgetGroup>
			
	<!--
	**********************************************
	Column 6 : Frequency killers
	**********************************************
	-->
	<WidgetGroup>
		<ObjectName>KillersColumn</ObjectName>
		<Layout>vertical</Layout>
		<SizePolicy>f,me</SizePolicy>
		<MinimumSize>20,-1</MinimumSize>
		<MaximumSize>20,-1</MaximumSize>
		<!--Style>QGroupBox { border: 1px solid red; }</Style-->
		<Children>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">21</SetVariable>
			</Template>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,f</SizePolicy>
				<MinimumSize>-1,56</MinimumSize>
				<MaximumSize>-1,56</MaximumSize>
				<Children>
					
					<Template src="skin:skin_btn_killer.xml">
						<SetVariable name="frequency">High</SetVariable>
					</Template>
					
					<Template src="skin:skin_spacer_v.xml"/>
					
					<Template src="skin:skin_btn_killer.xml">
						<SetVariable name="frequency">Mid</SetVariable>
					</Template>
					
					<Template src="skin:skin_spacer_v.xml"/>
					
					<Template src="skin:skin_btn_killer.xml">
						<SetVariable name="frequency">Low</SetVariable>
					</Template>
					
				</Children>
			</WidgetGroup>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">7</SetVariable>
			</Template>
			
			<Template src="skin:skin_opener.xml">
				<SetVariable name="action">show_equalizers</SetVariable>
			</Template>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">1</SetVariable>
			</Template>
			
		</Children>
	</WidgetGroup>


	<!--
	**********************************************
	Column 7 : EQs
	**********************************************
	-->

	<WidgetGroup>
		<ObjectName>EqualizersColumn</ObjectName>
		<Layout>vertical</Layout>
		<SizePolicy>f,me</SizePolicy>
		<MinimumSize>70,-1</MinimumSize>
		<MaximumSize>70,-1</MaximumSize>
		<!--Style>QGroupBox { border: 1px solid red; }</Style-->
		<Children>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">0</SetVariable>
			</Template>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>me,min</SizePolicy>
				<Children>
					
					<Template src="skin:skin_btn_eq.xml">
						<SetVariable name="frequency">High</SetVariable>
						<SetVariable name="height">25</SetVariable>
					</Template>
					
					<Template src="skin:skin_spacer_vx.xml">
						<SetVariable name="height">5</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_eq.xml">
						<SetVariable name="frequency">Mid</SetVariable>
						<SetVariable name="height">25</SetVariable>
					</Template>
					
					<Template src="skin:skin_spacer_vx.xml">
						<SetVariable name="height">5</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_eq.xml">
						<SetVariable name="frequency">Low</SetVariable>
						<SetVariable name="height">25</SetVariable>
					</Template>
					
				</Children>
			</WidgetGroup>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">10</SetVariable>
			</Template>
			
		</Children>
		<Connection>
			<ConfigKey><Variable name="channel"/>,show_equalizers</ConfigKey>
			<BindProperty>visible</BindProperty>
		</Connection>
	</WidgetGroup>


	</Children>
	</WidgetGroup>
</Template>




