<!DOCTYPE template>
<!--
Description:
Track control panel.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
	
	
  <WidgetGroup>
    <ObjectName>Deck</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>min,me</SizePolicy>
	<!--Style>QGroupBox { border: 1px solid red; }</Style-->
    <Children>



	<!--
	**********************************************
	Column 1
	**********************************************
	-->
	<!--
	**********************************************
	Column 2
	**********************************************
	-->


      <WidgetGroup>
		<Layout>vertical</Layout>
		<Size>35,110</Size>
		<Children>
			
			<!--
			****************************************
			 Button- Play
			****************************************
			-->
			<PushButton>
				<TooltipId>play_cue_set</TooltipId>
				<MinimumSize>20,20</MinimumSize>
				<MaximumSize>40,30</MaximumSize>
				<Style></Style>
				<NumberStates>2</NumberStates>
				<RightClickIsPushButton>true</RightClickIsPushButton>
				<!--State>
					<Number>0</Number>
					<Pressed>btn_eject1.png</Pressed>
					<Unpressed>btn_eject1.png</Unpressed>
				</State>
				<State>
					<Number>1</Number>
					<Pressed>btn_eject<Variable name="i"/>_over.png</Pressed>
					<Unpressed>btn_eject<Variable name="i"/>_over.png</Unpressed>
				</State-->
				<State>
					<Number>0</Number>
					<!--Pressed>btn_play_off.svg</Pressed-->
					<Unpressed>btn_play.png</Unpressed>
				</State>
				<State>
					<Number>1</Number>
					<!--Pressed>btn_play<Variable name="i"/>_over.png</Pressed-->
					<Unpressed>btn_pause.png</Unpressed>
				</State>
				<Connection>
					<ConfigKey><Variable name="channel"/>,play</ConfigKey>
					<EmitOnDownPress>true</EmitOnDownPress>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
				<Connection>
					<ConfigKey><Variable name="channel"/>,cue_set</ConfigKey>
					<EmitOnDownPress>true</EmitOnDownPress>
					<ButtonState>RightButton</ButtonState>
					<ConnectValueToWidget>false</ConnectValueToWidget>
				</Connection>
			</PushButton>
			
			
			<!--
			**********************************************
			Button- Prelisten / Monitoring
			**********************************************
			-->
			<PushButton>
				<TooltipId>pfl</TooltipId>
				<MinimumSize>30,20</MinimumSize>
				<MaximumSize>40,30</MaximumSize>
				<Style></Style>
				<NumberStates>2</NumberStates>
				<State>
					<Number>0</Number>
					<Pressed>btn_pfl_sampler.png</Pressed>
					<Unpressed>btn_pfl_sampler.png</Unpressed>
				</State>
				<State>
					<Number>1</Number>
					<Pressed>btn_pfl_sampler_over.png</Pressed>
					<Unpressed>btn_pfl_sampler_over.png</Unpressed>
				</State>
				<!--State>
					<Number>0</Number>
					<Pressed>btn_pfl<Variable name="i"/>.png</Pressed>
					<Unpressed>btn_pfl<Variable name="i"/>.png</Unpressed>
				</State>
				<State>
					<Number>1</Number>
					<Pressed>btn_pfl<Variable name="i"/>_over.png</Pressed>
					<Unpressed>btn_pfl<Variable name="i"/>_over.png</Unpressed>
				</State-->
				<Connection>
					<ConfigKey><Variable name="channel"/>,pfl</ConfigKey>
				</Connection>
			</PushButton>
			
			
			<!--
			**********************************************
			Button- Beat sync
			**********************************************
			-->
			<PushButton>
				<TooltipId>beatsync_beatsync_tempo</TooltipId>
				<NumberStates>1</NumberStates>
				<State>
					<Number>0</Number>
					<!--Pressed>btn_sync<Variable name="i"/>_over.png</Pressed-->
					<Unpressed>btn_s_off.png</Unpressed>
				</State>
				<Connection>
					<ConfigKey><Variable name="channel"/>,beatsync</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
				<Connection>
					<ConfigKey><Variable name="channel"/>,beatsync_tempo</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
					<ButtonState>RightButton</ButtonState>
				</Connection>
			</PushButton>
			
			<!--
			**********************************************
			Button- Sync Master
			**********************************************
			-->
			<PushButton>
				<ObjectName>DeckSyncMaster</ObjectName>
				<Size>40f,20f</Size>
				<NumberStates>2</NumberStates>
				<State>
					<Number>0</Number>
					<Unpressed>btn_m_off.png</Unpressed>
					<!--Pressed>icon_fist_4.png</Pressed>
					<Unpressed>icon_fist_4.png</Unpressed-->
				</State>
				<State>
					<Number>1</Number>
					<Unpressed>btn_m_off.png</Unpressed>
					<!--Unpressed>icon_fist_4.png</Unpressed-->
					<!--Pressed>btn_sync<Variable name="i"/>.png</Pressed-->
				</State>
				<Connection>
					<ConfigKey><Variable name="channel"/>,sync_master</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
			</PushButton>

			<!--
			**********************************************
			Button- BPM Tap
			**********************************************
			Little trickery here:
			BPM tap is transparent png directly over BPM display, so it became BPM and TAP at once,
			changed tooltip accordingly
			-->
			<!--PushButton>
				<TooltipId>bpm_tap_visual_bpm</TooltipId>
				<Style></Style>
				<NumberStates>1</NumberStates>
				<State>
					<Number>0</Number>
					<Pressed>btn_tap1_over.png</Pressed>
					<Unpressed>btn_tap1.png</Unpressed>
				</State>
				<Pos>307,80</Pos>
				<Connection>
					<ConfigKey><Variable name="channel"/>,bpm_tap</ConfigKey>
					<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
				</Connection>
			</PushButton-->
			
			
			
			<Template src="skin:skin_opener.xml">
				<SetVariable name="action">show_cues</SetVariable>
			</Template>
			
			
        </Children>
      </WidgetGroup>






	<!--
	**********************************************
	Column 3 
	**********************************************
	-->

	<!--
	**********************************************
	Column 4
	**********************************************
	-->
	<WidgetGroup>
		<Layout>horizontal</Layout>
		<SizePolicy>min,me</SizePolicy>
		<Children>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<MinimumSize>20,-1</MinimumSize>
				<Children>
					
					<SliderComposed>
						<TooltipId>pitch_rate</TooltipId>
						<Size>25,90</Size>
						<Slider>slider-vertical-15x90.svg</Slider>
						<Handle>handle-vertical-15x12-<Variable name="i"/>.svg</Handle>
						<Horizontal>false</Horizontal>
						<Alignment>center</Alignment>
						<Connection>
							<ConfigKey><Variable name="channel"/>,rate</ConfigKey>
							<EmitOnDownPress>false</EmitOnDownPress>
						</Connection>
					</SliderComposed>
				
					<WidgetGroup>
						<Layout>vertical</Layout>
						<SizePolicy>min,min</SizePolicy>
						<Children>
							
							<!--
							**********************************************
							Button- Key lock
							**********************************************
							-->
							
							<PushButton>
								<TooltipId>keylock</TooltipId>
								<MinimumSize>35,35</MinimumSize>
								<MaximumSize>35,35</MaximumSize>
								<NumberStates>2</NumberStates>
								<State>
									<Number>0</Number>
									<Pressed>btn_keylock_sampler.png</Pressed>
									<Unpressed>btn_keylock_sampler.png</Unpressed>
								</State>
								<State>
									<Number>1</Number>
									<Pressed>btn_keylock_sampler_over.png</Pressed>
									<Unpressed>btn_keylock_sampler_over.png</Unpressed>
								</State>
								<Pos>3,265</Pos>
								<Connection>
									<ConfigKey><Variable name="channel"/>,keylock</ConfigKey>
								</Connection>
							</PushButton>
							
							
						</Children>
					</WidgetGroup>
					
				</Children>
			</WidgetGroup>
			
			<!--
			**********************************************
			Button- Hotcue
			**********************************************
			-->
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<Children>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="number">1</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="number">2</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="number">3</SetVariable>
					</Template>
					
					<Template src="skin:skin_btn_number.xml">
						<SetVariable name="number">4</SetVariable>
					</Template>
					
					<!--
					**********************************************
					Button - Quantize
					**********************************************
					-->
					<PushButton>
						<TooltipId>quantize</TooltipId>
						<MinimumSize>40,20</MinimumSize>
						<MaximumSize>60,40</MaximumSize>
						<Style></Style>
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Pressed>btn_magnet_off.png</Pressed>
							<Unpressed>btn_magnet_off.png</Unpressed>
						</State>
						<State>
							<Number>1</Number>
							<!--Pressed>btn_quantize<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_quantize<Variable name="i"/>_over.png</Unpressed -->
							<Pressed>btn_magnet_<Variable name="i"/>.png</Pressed>
							<Unpressed>btn_magnet_<Variable name="i"/>.png</Unpressed>
						</State>
						<Connection>
							<ConfigKey><Variable name="channel"/>,quantize</ConfigKey>
							<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
							<ButtonState>LeftButton</ButtonState>
						</Connection>
					</PushButton>
					
				</Children>
			</WidgetGroup>
			
		</Children>
		<Connection>
			<ConfigKey><Variable name="channel"/>,show_cues</ConfigKey>
			<BindProperty>visible</BindProperty>
		</Connection>
	</WidgetGroup>


	<!--
	**********************************************
	Column 5 : Channel Volume
	**********************************************
	-->
	<WidgetGroup>
		<Layout>vertical</Layout>
		<Size>25,110</Size>
		<Children>
			
			<SliderComposed>
				<TooltipId>channel_volume</TooltipId>
				<!--Size>25,100</Size-->
				<Style>QGroupBox { border: 1px solid red; }</Style>
				<SizePoicy>min,min</SizePoicy>
				<Slider>slider-vertical-25x75.svg</Slider>
				<Handle>handle-vertical-25x12-<Variable name="i"/>.svg</Handle>
				<Horizontal>false</Horizontal>
				<Connection>
					<ConfigKey><Variable name="channel"/>,volume</ConfigKey>
					<EmitOnDownPress>false</EmitOnDownPress>
				</Connection>
			</SliderComposed>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">8</SetVariable>
			</Template>
			
			<Template src="skin:skin_opener.xml">
				<SetVariable name="action">show_pregain</SetVariable>
			</Template>
			
		</Children>
	</WidgetGroup>



	<!--
	**********************************************
	Column 6 : Gain
	**********************************************
	-->

	<WidgetGroup>
		<Layout>vertical</Layout>
			<Size>25,90</Size>
			<SizePolicy>f,me</SizePolicy>
			<Children>
			
			<SliderComposed>
				<TooltipId>pregain</TooltipId>
				<Size>25,90</Size>
				<Slider>slider-vertical-25x90.svg</Slider>
				<Handle>handle-vertical-25x12-<Variable name="i"/>.svg</Handle>
				<Horizontal>false</Horizontal>
				<Connection>
					<ConfigKey><Variable name="channel"/>,pregain</ConfigKey>
				</Connection>
			</SliderComposed>
			
			<Template src="skin:skin_spacer.xml"/>
			
		</Children>
		<Connection>
			<ConfigKey><Variable name="channel"/>,show_pregain</ConfigKey>
			<BindProperty>visible</BindProperty>
		</Connection>
	</WidgetGroup>
			
	<!--
	**********************************************
	Column 6 : Frequency killers
	**********************************************
	-->
	<WidgetGroup>
		<Layout>vertical</Layout>
		<SizePolicy>f,me</SizePolicy>
		<Size>20,110</Size>
		<Children>
			
			<Template src="skin:skin_spacer.xml"/>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<Children>
					
					<PushButton>
						<TooltipId>filterHighKill</TooltipId>
						<SizePolicy>f,me</SizePolicy>
						<Size>8,30</Size>
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Pressed>btn_kill<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_kill<Variable name="i"/>.png</Unpressed>
						</State>
						<State>
							<Number>1</Number>
							<Pressed>btn_kill<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_kill<Variable name="i"/>_over.png</Unpressed>
						</State>
						<Connection>
							<ConfigKey><Variable name="channel"/>,filterHighKill</ConfigKey>
							<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
							<ButtonState>LeftButton</ButtonState>
						</Connection>
					</PushButton>
					
				</Children>
			</WidgetGroup>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<Children>
					
					
					<PushButton>
						<TooltipId>filterMidKill</TooltipId>
						<SizePolicy>f,me</SizePolicy>
						<!--Size>8,8</Size-->
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Pressed>btn_kill<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_kill<Variable name="i"/>.png</Unpressed>
						</State>
						<State>
							<Number>1</Number>
							<Pressed>btn_kill<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_kill<Variable name="i"/>_over.png</Unpressed>
						</State>
						<Connection>
							<ConfigKey><Variable name="channel"/>,filterMidKill</ConfigKey>
							<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
							<ButtonState>LeftButton</ButtonState>
						</Connection>
					</PushButton>
					
				</Children>
			</WidgetGroup>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>min,me</SizePolicy>
				<Children>
					
					
					<PushButton>
						<TooltipId>filterLowKill</TooltipId>
						<SizePolicy>f,me</SizePolicy>
						<!--Size>8,8</Size-->
						<NumberStates>2</NumberStates>
						<State>
							<Number>0</Number>
							<Pressed>btn_kill<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_kill<Variable name="i"/>.png</Unpressed>
						</State>
						<State>
							<Number>1</Number>
							<Pressed>btn_kill<Variable name="i"/>_over.png</Pressed>
							<Unpressed>btn_kill<Variable name="i"/>_over.png</Unpressed>
						</State>
						<Connection>
							<ConfigKey><Variable name="channel"/>,filterLowKill</ConfigKey>
							<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
							<ButtonState>LeftButton</ButtonState>
						</Connection>
					</PushButton>
					
				</Children>
			</WidgetGroup>
			
			<Template src="skin:skin_opener.xml">
				<SetVariable name="action">show_equalizers</SetVariable>
			</Template>
			
		</Children>
	</WidgetGroup>


	<!--
	**********************************************
	Column 7 : EQs
	**********************************************
	-->

	<WidgetGroup>
		<Layout>vertical</Layout>
		<Size>70,110</Size>
		<!--Style>QGroupBox { border: 1px solid red; }</Style-->
		<SizePolicy>f,me</SizePolicy>
		<Children>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>me,me</SizePolicy>
				<Children>
					
					<SliderComposed>
						<TooltipId>filterHigh</TooltipId>
						<SizePolicy>f,e</SizePolicy>
						<Size>60,35</Size>
						<Slider>slider-horizontal-60x25.svg</Slider>
						<Handle>handle-horizontal-10x25-<Variable name="i"/>.svg</Handle>
						<Horizontal>true</Horizontal>
						<Connection>
							<ConfigKey><Variable name="channel"/>,filterMid</ConfigKey>
						</Connection>
					</SliderComposed>
					
				</Children>
			</WidgetGroup>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>me,me</SizePolicy>
				<Children>
					
					<SliderComposed>
						<TooltipId>filterMid</TooltipId>
						<SizePolicy>f,me</SizePolicy>
						<Size>60,35</Size>
						<Slider>slider-horizontal-60x25.svg</Slider>
						<Handle>handle-horizontal-10x25-<Variable name="i"/>.svg</Handle>
						<Horizontal>true</Horizontal>
						<Connection>
							<ConfigKey><Variable name="channel"/>,filterHigh</ConfigKey>
						</Connection>
					</SliderComposed>
					
				</Children>
			</WidgetGroup>
			
			<WidgetGroup>
				<Layout>vertical</Layout>
				<SizePolicy>me,me</SizePolicy>
				<Children>
					
					<SliderComposed>
						<TooltipId>filterLow</TooltipId>
						<SizePolicy>f,me</SizePolicy>
						<Size>60,35</Size>
						<Slider>slider-horizontal-60x25.svg</Slider>
						<Handle>handle-horizontal-10x25-<Variable name="i"/>.svg</Handle>
						<Horizontal>true</Horizontal>
						<Connection>
							<ConfigKey><Variable name="channel"/>,filterLow</ConfigKey>
						</Connection>
					</SliderComposed>
					
				</Children>
			</WidgetGroup>
			
			
			
        </Children>
		<Connection>
			<ConfigKey><Variable name="channel"/>,show_equalizers</ConfigKey>
			<BindProperty>visible</BindProperty>
		</Connection>
      </WidgetGroup>


    </Children>
  </WidgetGroup>
</Template>




