<!DOCTYPE template>
<!--
Description:
Opener.
-->
<Template>
	
	<PushButton>
		<TooltipId><Variable name="tooltip_id"/></TooltipId>
		
		<NumberStates>2</NumberStates>
		
		<LeftClickIsPushButton>true</LeftClickIsPushButton>
		<RightClickIsPushButton>true</RightClickIsPushButton>
		
		<State>
			<Number>0</Number>
			<Pressed>btn_number_<Variable name="i"/>_<Variable name="number"/>_over.png</Pressed>
			<Unpressed>btn_number_<Variable name="i"/>_<Variable name="number"/>.png</Unpressed>
		</State>
		
		<State>
			<Number>1</Number>
			<Pressed>btn_number_<Variable name="i"/>_<Variable name="number"/>.png</Pressed>
			<Unpressed>btn_number_<Variable name="i"/>_<Variable name="number"/>_over.png</Unpressed>
		</State>
		
		<Connection>
			<ConfigKey><Variable name="channel"/>,<Variable name="left_control"/></ConfigKey>
			<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
			<ConnectValueToWidget>false</ConnectValueToWidget>
			<ButtonState>LeftButton</ButtonState>
		</Connection>
		
		<Connection>
			<ConfigKey><Variable name="channel"/>,<Variable name="right_control"/></ConfigKey>
			<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
			<ConnectValueToWidget>false</ConnectValueToWidget>
			<ButtonState>RightButton</ButtonState>
		</Connection>
		
		<Connection>
			<ConfigKey><Variable name="channel"/>,<Variable name="display_control"/></ConfigKey>
			<ConnectValueFromWidget>false</ConnectValueFromWidget>
		</Connection>
		
	</PushButton>
	
</Template>




