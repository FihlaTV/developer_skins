<!DOCTYPE template>
<!--
Description:
A deck with essential controls.
-->
<Template>
	<WidgetGroup>
		<ObjectName>Deck<Variable name="i"/></ObjectName>
		<Layout>horizontal</Layout>
		<SizePolicy>me,f</SizePolicy>
		<MinimumSize>-1,<Variable name="height"/></MinimumSize>
		<MaximumSize>-1,<Variable name="height"/></MaximumSize>
		<Children>
			
			<Template src="skin:skin_track_control.xml"/>
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">6</SetVariable>
			</Template>
			
			<Template src="skin:skin_track_info.xml"/>
			
		</Children>
	</WidgetGroup>
</Template>
