<!DOCTYPE template>
<!--
Description:
Opener.
-->
<Template>
	<WidgetGroup>
		<Layout>horizontal</Layout>
		<!--Style>QGroupBox { border: 1px solid red; }</Style-->
		<Size>16,21</Size>
		<SizePolicy>min,min</SizePolicy>
		<Children>
			
			<SetVariable name="number">+</SetVariable>
			
			<PushButton>
				<NumberStates>2</NumberStates>
				<State>
					<Number>0</Number>
					<SetVariable name="text">+</SetVariable>
					<Unpressed>btn_text_little_1x1.svg</Unpressed>
					<Pressed>btn_text_little_1x1.svg</Pressed>
				</State>
				<State>
					<Number>1</Number>
					<SetVariable name="text">-</SetVariable>
					<Unpressed>btn_text_little_1x1.svg</Unpressed>
					<Pressed>btn_text_little_1x1.svg</Pressed>
				</State>
				<Connection>
					<ConfigKey persist="true"><Variable name="channel"/>,<Variable name="action"/></ConfigKey>
				</Connection>
			</PushButton>
			
		</Children>
	</WidgetGroup>
</Template>




