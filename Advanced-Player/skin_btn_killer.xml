<!DOCTYPE template>
<!--
Description:
Killer button
-->
<Template>
	
	<SetVariable name="width">9</SetVariable>
	<SetVariable name="height">9</SetVariable>
	
	<PushButton>
		<TooltipId>filter<Variable name="frequency"/>Kill</TooltipId>
		<NumberStates>2</NumberStates>
		<State>
			<Number>0</Number>
			<SetVariable name="color"></SetVariable>
			<Unpressed>btn_circle.svg</Unpressed>
			<Pressed>btn_circle.svg</Pressed>
		</State>
		<State>
			<Number>1</Number>
			<SetVariable name="color"><Variable name="track_light_color"/></SetVariable>
			<Unpressed>btn_circle.svg</Unpressed>
			<Pressed>btn_circle.svg</Pressed>
		</State>
		<Connection>
			<ConfigKey><Variable name="channel"/>,filter<Variable name="frequency"/>Kill</ConfigKey>
			<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
			<ButtonState>LeftButton</ButtonState>
		</Connection>
	</PushButton>
	
</Template>

