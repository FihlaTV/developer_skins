<!DOCTYPE template>
<!--
Description:
Track info panel.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
	<WidgetGroup>
		<ObjectName>Track Info</ObjectName>
		<Layout>vertical</Layout>
		<SizePolicy>me,min</SizePolicy>
		<!--MinimumSize>210,<Variable name="height"/></MinimumSize-->
		<MinimumSize>210,-1</MinimumSize>
		<Style>
			/** /
			QGroupBox { border: 1px solid red; }
			/**/
		</Style>
		<Children>
			
			<WidgetGroup>
				<ObjectName>Track Text Info</ObjectName>
				<Layout>horizontal</Layout>
				<SizePolicy>me,f</SizePolicy>
				<MinimumSize>-1,16</MinimumSize>
				<MaximumSize>-1,16</MaximumSize>
				<Children>
					
					
					<!--
					**********************************************
					Text- Track Artist
					**********************************************
					-->
					<TrackProperty>
						<TooltipId>track_artist</TooltipId>
						<MinimumSize>150,-1</MinimumSize>
						<MaximumSize>150,-1</MaximumSize>
						<Alignment>left</Alignment>
						<Property>artist</Property>
						<Channel><Variable name="i"/></Channel>
					</TrackProperty>
					
					
					<!--
					**********************************************
					Text- Track Title
					**********************************************
					-->
					<TrackProperty>
						<TooltipId>track_title</TooltipId>
						<SizePolicy>me,me</SizePolicy>
						<MaximumSize>i,20</MaximumSize>
						<Alignment>left</Alignment>
						<Property>title</Property>
						<Channel><Variable name="i"/></Channel>
					</TrackProperty>
					
					<!--
					**********************************************
					Text- Times Played
					**********************************************
					-->
					<TrackProperty>
						<TooltipId>track_times_played</TooltipId>
						<Property>times_played</Property>
						<Channel><Variable name="i"/></Channel>
					</TrackProperty>
					
					
				</Children>
			</WidgetGroup>
			
			
			
			
			<!--
			**********************************************
			Visual- Waveform overview
			**********************************************
			-->
			
			<Splitter>
				<!--ObjectName>LibrarySplitter</ObjectName-->
				<Orientation>horizontal</Orientation>
				<SizePolicy>me,min</SizePolicy>
				<Children>
					
					<Visual>
						<TooltipId>waveform_display</TooltipId>
						<Style></Style>
						<Channel><Variable name="i"/></Channel>
						<BgColor>#191919</BgColor>
						<!--BgPixmap>style/style_bg_waveform1.png</BgPixmap-->
						<SignalHighColor>#eecc00</SignalHighColor>
						<SignalMidColor>#13a9fc</SignalMidColor>
						<SignalLowColor>#cc0022</SignalLowColor>
						<SignalColor>#666666</SignalColor>
						
						<BeatColor>#88ff88</BeatColor>
						<BeatHighlightColor></BeatHighlightColor>
						<PlayPosColor>#00FF00</PlayPosColor>
						
						<!--EndOfTrackColor>#EA0000</EndOfTrackColor-->
						<EndOfTrackColor><Variable name="track_light_color"/></EndOfTrackColor>
						
						<DefaultMark>
							<Align>top</Align>
							<Color>#00FF00</Color>
							<TextColor>#FFFFFF</TextColor>
							<Text> %1 </Text>
						</DefaultMark>
						<MarkRange>
							<StartControl>loop_start_position</StartControl>
							<EndControl>loop_end_position</EndControl>
							<EnabledControl>loop_enabled</EnabledControl>
							<Color>#00FF00</Color>
							<DisabledColor>#FFFFFF</DisabledColor>
						</MarkRange>
						<Mark>
							<Control>loop_start_position</Control>
							<Text>IN</Text>
							<Align>bottom</Align>
							<Color>#00FF00</Color>
							<TextColor>#FFFFFF</TextColor>
						</Mark>
						<Mark>
							<Control>loop_end_position</Control>
							<Text>OUT</Text>
							<Align>bottom</Align>
							<Color>#00FF00</Color>
							<TextColor>#FFFFFF</TextColor>
						</Mark>
						<!--
						The hotcues not represented by a button in the current skin show only in the waveform under two circumstances:
							- if a MIDI device which supports more hotcues than buttons are in the current skin has them activated
							- if you change from a skin which supports more hotcues than buttons are in the current skin (and has them activated)
						-->
						<Mark>
							<Control>cue_point</Control>
							<Text>CUE</Text>
							<Align>top</Align>
							<Color>#FF001C</Color>
							<TextColor>#FFFFFF</TextColor>
						</Mark>
					</Visual>
					
					<Overview>
						<TooltipId>waveform_overview</TooltipId>
						<SizePolicy>me,f</SizePolicy>
						<MinimumSize>150,51</MinimumSize>
						<MaximumSize>-1,51</MaximumSize>
						<Channel><Variable name="i"/></Channel>
						<BgColor>#191919</BgColor>
						<SignalHighColor>#FFE300</SignalHighColor>
						<SignalMidColor>#0099FF</SignalMidColor>
						<SignalLowColor>#FF0035</SignalLowColor>
						<SignalColor>#FF8000</SignalColor>
						<PlayPosColor>#00FF00</PlayPosColor>
						<EndOfTrackColor><Variable name="track_light_color"/></EndOfTrackColor>
						<DefaultMark>
							<Align>bottom</Align>
							<Color>#00FF00</Color>
							<TextColor>#CCCCCC</TextColor>
							<Text> %1 </Text>
						</DefaultMark>
						<MarkRange>
							<StartControl>loop_start_position</StartControl>
							<EndControl>loop_end_position</EndControl>
							<EnabledControl>loop_enabled</EnabledControl>
							<Color>#00FF00</Color>
							<DisabledColor>#008000</DisabledColor>
						</MarkRange>
						<Mark>
							<Control>cue_point</Control>
							<Text>C</Text>
							<Align>top</Align>
							<Color>#00FF00</Color>
							<TextColor>#CCCCCC</TextColor>
						</Mark>
						<Connection>
							<ConfigKey><Variable name="channel"/>,playposition</ConfigKey>
							<EmitOnDownPress>false</EmitOnDownPress>
						</Connection>
					</Overview>
					
				</Children>
			</Splitter>
			
			
			<WidgetGroup>
				<ObjectName>Overview</ObjectName>
				<Layout>horizontal</Layout>
				<SizePolicy>me,f</SizePolicy>
				<MaximumSize>-1,35</MaximumSize>
				<Children>
					
					<WidgetGroup>
						<ObjectName>speed</ObjectName>
						<Layout>horizontal</Layout>
						<SizePolicy>min,f</SizePolicy>
						<Size>i,20</Size>
						<Children>
							
							
							<!--
							**********************************************
							Text - BPM + Pitch rate display
							**********************************************
							-->
							<NumberBpm>
								<TooltipId>visual_bpm</TooltipId>
								<SizePolicy>min,me</SizePolicy>
								<Channel><Variable name="i"/></Channel>
								<!--CSS alignments not respected see bug lp:605530 , lets call <Alignment>-->
								<Alignment>right</Alignment>
								<Connection>
									<ConfigKey><Variable name="channel"/>,visual_bpm</ConfigKey>
								</Connection>
							</NumberBpm>
							
							<Template src="skin:skin_spacer_vx.xml">
								<SetVariable name="height">3</SetVariable>
							</Template>
							
							<NumberRate>
								<TooltipId>rate_display</TooltipId>
								<Channel><Variable name="i"/></Channel>
								<NumberOfDigits>2</NumberOfDigits>
							</NumberRate>
							
							<Template src="skin:skin_spacer_vx.xml">
								<SetVariable name="height">6</SetVariable>
							</Template>
							
							<!--
							**********************************************
							Text - Key
							**********************************************
							-->
							<Key>
								<TooltipId>visual_key</TooltipId>
								<!--Style>font; bg-color; color; text-align; (padding);
								</Style-->
								<DisplayCents>false</DisplayCents>
								<Connection>
									<ConfigKey><Variable name="channel"/>,visual_key</ConfigKey>
								</Connection>
							</Key>
							
							<Template src="skin:skin_spacer_vx.xml">
								<SetVariable name="height">0</SetVariable>
							</Template>
							
							<Label>
								<Text>/</Text>
							</Label>
							
							<Template src="skin:skin_spacer_vx.xml">
								<SetVariable name="height">0</SetVariable>
							</Template>
							
							<TrackProperty>
								<TooltipId>track_times_played</TooltipId>
								<SizePolicy>min,me</SizePolicy>
								<Property>key</Property>
								<Channel><Variable name="i"/></Channel>
							</TrackProperty>
							
						</Children>
					</WidgetGroup>
					
					<Template src="skin:skin_spacer.xml"></Template>
					
					<WidgetGroup>
						<Layout>horizontal</Layout>
						<SizePolicy>min,f</SizePolicy>
						<Size>i,20</Size>
						<Children>
							
							<!--
							**********************************************
							Text- Playing position / Time remaining
							**********************************************
							-->
							<NumberPos>
								<TooltipId>track_time</TooltipId>
								<Channel><Variable name="i"/></Channel>
								<SizePolicy>min,f</SizePolicy>
								<Size>i,20</Size>
								<!--CSS alignments not respected see bug lp:605530 , lets call <Alignment>-->
								<Alignment>right</Alignment>
								<!--NumberOfDigits>6</NumberOfDigits marche pas ?-->
								<Connection>
									<ConfigKey><Variable name="channel"/>,playposition</ConfigKey>
								</Connection>
							</NumberPos>
							
							<Template src="skin:skin_spacer_vx.xml">
								<SetVariable name="height">6</SetVariable>
							</Template>
							
							<Label>
								<Text>/</Text>
							</Label>
							
							<Template src="skin:skin_spacer_vx.xml">
								<SetVariable name="height">6</SetVariable>
							</Template>
							
							<!--
							**********************************************
							Text- Playing position / Time remaining
							**********************************************
							-->
							<TrackProperty>
								<TooltipId>track_duration</TooltipId>
								<Channel><Variable name="i"/></Channel>
								<Property>durationFormatted</Property>
								<SizePolicy>min,f</SizePolicy>
								<Size>i,20</Size>
								<!--CSS alignments not respected see bug lp:605530 , lets call <Alignment>-->
								<Alignment>right</Alignment>
							</TrackProperty>
							
							
							
						</Children>
					</WidgetGroup>
							
					<!--
					**********************************************
					Text- Bitrate
					TODO
					**********************************************
					->
					<TrackProperty>
						<TooltipId>track_bitrate</TooltipId>
						<Style>QLabel { font: bold 12px/14px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
						background-color: transparent; text-align: right; padding-left: 1px; }
						</Style>
						<Property>times_played</Property>
						<Channel><Variable name="i"/></Channel>
					</TrackProperty-->
					
					
				</Children>
			</WidgetGroup>
			
			
			<Template src="skin:skin_spacer_vx.xml">
				<SetVariable name="height">4</SetVariable>
			</Template>
			
			
		</Children>
	</WidgetGroup>
</Template>




