<!DOCTYPE template>
<!--
Description:
Button with a number
-->
<Template>
	
	<SetVariable name="text"><Variable name="number"/></SetVariable>
	
	<PushButton>
		<TooltipId><Variable name="tooltip_id"/></TooltipId>
		
		<NumberStates>2</NumberStates>
		
		<State>
			<Number>0</Number>
			<Unpressed>btn_text_little_1x1.svg</Unpressed>
			<Pressed>btn_text_little_1x1.svg</Pressed>
		</State>
		
		<State>
			<Number>1</Number>
			<SetVariable name="dark_color"><Variable name="track_dark_color"/></SetVariable>
			<SetVariable name="light_color"><Variable name="track_light_color"/></SetVariable>
			<SetVariable name="text_color"><Variable name="track_text_color"/></SetVariable>
			<Pressed>btn_text_little_1x1.svg</Pressed>
			<Unpressed>btn_text_little_1x1.svg</Unpressed>
		</State>
		
		<Connection>
			<ConfigKey><Variable name="channel"/>,<Variable name="left_control"/></ConfigKey>
			<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
			<ConnectValueToWidget>false</ConnectValueToWidget>
			<ButtonState>LeftButton</ButtonState>
		</Connection>
		
		<Connection>
			<ConfigKey><Variable name="channel"/>,<Variable name="right_control"/></ConfigKey>
			<EmitOnPressAndRelease>true</EmitOnPressAndRelease>
			<ConnectValueToWidget>false</ConnectValueToWidget>
			<ButtonState>RightButton</ButtonState>
		</Connection>
		
		<Connection>
			<ConfigKey><Variable name="channel"/>,<Variable name="display_control"/></ConfigKey>
			<ConnectValueFromWidget>false</ConnectValueFromWidget>
		</Connection>
		
	</PushButton>
	
</Template>
