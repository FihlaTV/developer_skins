<!DOCTYPE template>
<!--
Description:
Track info panel.
-->
<Template>
	<SetVariable name="channel">[Channel<Variable name="i"/>]</SetVariable>
	<WidgetGroup>
		<ObjectName>Track Info</ObjectName>
		<Layout>vertical</Layout>
		<SizePolicy>e,e</SizePolicy>
		<MinimumSize>210,100</MinimumSize>
		<MaximumSize>-1,110</MaximumSize>
		<Children>
			
			<WidgetGroup>
				<ObjectName>Track Text Info</ObjectName>
				<Layout>horizontal</Layout>
				<SizePolicy>e,e</SizePolicy>
				<MinimumSize>300,20</MinimumSize>
				<MaximumSize>-1,20</MaximumSize>
				<Children>
					
					
					<!--
					**********************************************
					Text- Track Artist
					**********************************************
					-->
					<TrackProperty>
						<TooltipId>track_artist</TooltipId>
						<MinimumSize>40,20</MinimumSize>
						<MaximumSize>150,20</MaximumSize>
						<Style>QLabel { font: bold 12px/14px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
						background-color: transparent; text-align: right; padding-left: 1px; }
						</Style>
						<Alignment>left</Alignment>
						<Property>artist</Property>
						<Channel><Variable name="i"/></Channel>
						<!--Size>190f,16</Size-->
					</TrackProperty>
					
					
					<!--
					**********************************************
					Text- Track Title
					**********************************************
					-->
					<TrackProperty>
						<TooltipId>track_title</TooltipId>
						<SizePolicy>e,e</SizePolicy>
						<Style>QLabel { font: bold 14px/16px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
						background-color: transparent; text-align: right; padding-left: 1px; }
						</Style>
						<Alignment>left</Alignment>
						<Property>title</Property>
						<Channel><Variable name="i"/></Channel>
						<Size>220f,18</Size>
					</TrackProperty>

					<!--
					**********************************************
					Text- BPM number display
					**********************************************
					-->
					<NumberBpm>
						<TooltipId>visual_bpm</TooltipId>
						<Style>QLabel { font: bold 14px/16px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
						background-color: transparent; text-align: left; padding-left: 1px; }
						</Style>
						<Channel><Variable name="i"/></Channel>
						<Size>60,18</Size>
						<!--CSS alignments not respected see bug lp:605530 , lets call <Alignment>-->
						<Alignment>right</Alignment>
						<Connection>
							<ConfigKey><Variable name="channel"/>,visual_bpm</ConfigKey>
						</Connection>
					</NumberBpm>
					
					
				</Children>
			</WidgetGroup>
			
			
			
			
			<!--
			**********************************************
			Visual- Waveform overview
			**********************************************
			-->
			<Overview>
				<TooltipId>waveform_overview</TooltipId>
				<SizePolicy>e,e</SizePolicy>
				<MinimumSize>150,50</MinimumSize>
				<MaximumSize>-1,50</MaximumSize>
				<Style></Style>
				<Channel><Variable name="i"/></Channel>
				<BgColor>#FFFFFF</BgColor>
				<SignalHighColor>#FFE300</SignalHighColor>
				<SignalMidColor>#0099FF</SignalMidColor>
				<SignalLowColor>#FF0035</SignalLowColor>
				<SignalColor>#FF8000</SignalColor>
				<PlayPosColor>#00FF00</PlayPosColor>
				<EndOfTrackColor>#EA0000</EndOfTrackColor>
				<DefaultMark>
					<Align>bottom</Align>
					<Color>#00FF00</Color>
					<TextColor>#CCCCCC</TextColor>
					<Text> %1 </Text>
				</DefaultMark>
				<MarkRange>
					<StartControl>loop_start_position</StartControl>
					<EndControl>loop_end_position</EndControl>
					<EnabledControl>loop_enabled</EnabledControl>
					<Color>#00FF00</Color>
					<DisabledColor>#008000</DisabledColor>
				</MarkRange>
				<Mark>
					<Control>cue_point</Control>
					<Text>C</Text>
					<Align>top</Align>
					<Color>#00FF00</Color>
					<TextColor>#CCCCCC</TextColor>
				</Mark>
				<Connection>
					<ConfigKey><Variable name="channel"/>,playposition</ConfigKey>
					<EmitOnDownPress>false</EmitOnDownPress>
				</Connection>
			</Overview>


			
			
			
			<WidgetGroup>
				<ObjectName>Track Info</ObjectName>
				<Layout>horizontal</Layout>
				<SizePolicy>e,e</SizePolicy>
				<MinimumSize>300,20</MinimumSize>
				<MaximumSize>-1,20</MaximumSize>
				<Children>
					
					<!--
					**********************************************
					Visual - Volume level display
					TODO : sizes?
					**********************************************
					-->
					<VuMeter>
						<TooltipId>channel_VuMeter</TooltipId>
						<SizePolicy>e,e</SizePolicy>
						<Style></Style>
						<!--PathVu>btn_volume_display1_over.png</PathVu>
						<PathBack>btn_volume_display1.png</PathBack-->
						<PathVu>btn_volume_display_master1_over.png</PathVu>
						<PathBack>btn_volume_display_master1.png</PathBack>
						<Alignment>left</Alignment>
						<Horizontal>true</Horizontal>
						<PeakHoldSize>5</PeakHoldSize>
						<PeakHoldTime>500</PeakHoldTime>
						<PeakFallTime>50</PeakFallTime>
						<PeakFallStep>1</PeakFallStep>
						<Connection>
							<ConfigKey><Variable name="channel"/>,VuMeter</ConfigKey>
						</Connection>
					</VuMeter>


					<!--
					**********************************************
					Visual- Volume peak indicator
					**********************************************
					-->
					<StatusLight>
						<TooltipId>PeakIndicator</TooltipId>
						<Alignment>left</Alignment>
						<Style></Style>
						<PathStatusLight>btn_clipping1_over.png</PathStatusLight>
						<PathBack>btn_clipping1.png</PathBack>
						<Connection>
							<ConfigKey><Variable name="channel"/>,PeakIndicator</ConfigKey>
						</Connection>
					</StatusLight>
					
					<!--
					**********************************************
					Text- Playing position / Time remaining
					**********************************************
					-->
					<NumberPos>
						<TooltipId>track_time</TooltipId>
						<Style>QLabel { font: bold 12px/14px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
						background-color: transparent; text-align: right; padding-left: 1px; }
						</Style>
						<Channel><Variable name="i"/></Channel>
						<Size>90,16</Size>
						<!--CSS alignments not respected see bug lp:605530 , lets call <Alignment>-->
						<Alignment>left</Alignment>
						<NumberOfDigits>6</NumberOfDigits>
						<Connection>
							<ConfigKey><Variable name="channel"/>,playposition</ConfigKey>
						</Connection>
					</NumberPos>

					<!--
					**********************************************
					Text- Pitch rate display
					**********************************************
					-->
					<NumberRate>
						<TooltipId>rate_display</TooltipId>
						<Style>QLabel { font: bold 12px/14px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
						background-color: transparent; text-align: right; }
						</Style>
						<Channel><Variable name="i"/></Channel>
						<Size>50,13</Size>
						<NumberOfDigits>4</NumberOfDigits>
					</NumberRate>
					
					
				</Children>
			</WidgetGroup>
			
			
			
		</Children>
	</WidgetGroup>
</Template>




